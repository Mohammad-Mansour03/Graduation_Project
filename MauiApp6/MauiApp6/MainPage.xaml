<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp6.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="25" 
                                 Padding="30,0" 
                                 VerticalOptions="Center">

                <Image Source="https://i.ibb.co/gdtWZHz/h3.png"
                       HeightRequest="100"
                       HorizontalOptions="Center" />

                <Label Text="The Future of Reservations"
                       SemanticProperties.HeadingLevel="Level1"
                       FontSize="20"
                       FontFamily="Montserrat"
                       TextColor="#553B8B"
                       HorizontalOptions="Center" />

                <VerticalStackLayout Spacing="30" Margin="0,50,0,0">
                    <Button Text="Sign up"
                            SemanticProperties.Hint="Sign up for a new account"
                            BackgroundColor="#553B8B"
                            TextColor="White"
                            FontFamily="Montserrat"
                            FontSize="16"
                            CornerRadius="25"
                            HeightRequest="50"
                            />

                    <Button Text="Login"
                            SemanticProperties.Hint="Login to your account"
                            BackgroundColor="Transparent"
                            TextColor="#553B8B"
                            FontSize="16"
                            CornerRadius="25"
                            HeightRequest="50"
                            BorderColor="#553B8B"
                            BorderWidth="1"
                            />
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <Button Grid.Row="1"
                Text="Continue as Guest"
                SemanticProperties.Hint="Continue without logging in"
                BackgroundColor="#65558F"
                TextColor="White"
                FontSize="16"
                CornerRadius="25"
                HeightRequest="50"
                WidthRequest="200"
                Opacity="0.8"
                HorizontalOptions="Center"
                VerticalOptions="End"
                Margin="0,0,0,20"
                />
    </Grid>

</ContentPage>
