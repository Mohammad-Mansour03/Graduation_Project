<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:HojozatyCode.Pages"
    x:Class="HojozatyCode.AppShell"
    Shell.TabBarBackgroundColor="LightGrey"
    Shell.TabBarTitleColor="#4F378A"
    Shell.TabBarUnselectedColor="Black"
    Shell.TabBarForegroundColor="#4F378A">

    <TabBar>
        <Tab Title="Home" Icon="home_icon.png">
            <ShellContent Route="Home" ContentTemplate="{DataTemplate pages:HomePage}" />
        </Tab>

        <Tab Title="My Space" Icon="my_space_icon_3.png">
            <ShellContent ContentTemplate="{DataTemplate pages:MySpace}" />
        </Tab>

        <!-- No "Add Space" tab here -->
        

        <Tab Title="Favourite" Icon="favourite_icon.png">
            <ShellContent ContentTemplate="{DataTemplate pages:FavouritePage}" />
        </Tab>

        <Tab Title="Account" Icon="account_icon_1.png">
            <ShellContent ContentTemplate="{DataTemplate pages:AccountPage}" />
        </Tab>
    </TabBar>

    


</Shell>
