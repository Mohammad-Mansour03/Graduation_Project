<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:HojozatyCode.ViewModels"
             x:Class="HojozatyCode.Pages.AccountPage"
             x:DataType="viewModels:AccountPageViewModel"
             Shell.NavBarIsVisible="False"
             Title="AccountPage"
             BackgroundColor="#F9F6FC">

    <ContentPage.BindingContext>
        <viewModels:AccountPageViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Back Icon -->
        <ImageButton Source="back_icon.png"
                     HeightRequest="30" WidthRequest="30"
                     VerticalOptions="Center"
                     HorizontalOptions="Start"
                     Padding="5"
                     Margin="-15,10,0,0"
                     Command="{Binding GoBackCommand}"/>

        <!-- Profile Icon -->
        <ImageButton Source="profile_icon.png"
                     Grid.Column="1"
                     HeightRequest="35"
                     WidthRequest="35"
                     HorizontalOptions="End"
                     VerticalOptions="Center"
                     Margin="0,0,10,0"
                     Command="{Binding GoToEditProfileCommand}"/>

        <!-- Title -->
        <Label Text="Account"
               Grid.Row="1"
               Grid.ColumnSpan="2"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Start"
               Margin="0,10,0,10"
               FontFamily="Title Page"
               TextColor="#4F378A"/>
        

        <!-- Content Area -->
        <VerticalStackLayout Grid.Row="2" Grid.ColumnSpan="2" Spacing="16" Margin="0,10">

            <!-- Section: Spaces -->
            <Label Text="Spaces" FontSize="16" FontAttributes="Bold" TextColor="#4F378A" Margin="5,0,0,0"/>
            <BoxView HeightRequest="1" Color="#E0DCEC"/>

            <!-- My Spaces -->
            <Border Padding="12"
                    StrokeShape="RoundRectangle 20"
                    BackgroundColor="White"
                    HorizontalOptions="Fill">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="2,2" Opacity="0.2" Radius="4"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToMySpaceCommand}" />
                </Border.GestureRecognizers>
                <HorizontalStackLayout Spacing="16" VerticalOptions="Center">
                    <Image Source="my_space_icon.png" WidthRequest="24" HeightRequest="24" VerticalOptions="Center"/>
                    <Label Text="My Spaces" FontSize="18" VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

            <!-- Add A Space -->
            <Border Padding="12"
                    StrokeShape="RoundRectangle 20"
                    BackgroundColor="White"
                    HorizontalOptions="Fill">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="2,2" Opacity="0.2" Radius="4"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToAddSpaceCommand}" />
                </Border.GestureRecognizers>
                <HorizontalStackLayout Spacing="16" VerticalOptions="Center">
                    <Image Source="add_space_icon_2.png" WidthRequest="24" HeightRequest="24" VerticalOptions="Center"/>
                    <Label Text="Add A Space" FontSize="18" VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

            <!-- Section: Preferences -->
            <Label Text="Preferences" FontSize="16" FontAttributes="Bold" TextColor="#4F378A" Margin="5,20,0,0"/>
            <BoxView HeightRequest="1" Color="#E0DCEC"/>

            <!-- Favorites -->
            <Border Padding="12"
                    StrokeShape="RoundRectangle 20"
                    BackgroundColor="White"
                    HorizontalOptions="Fill">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="2,2" Opacity="0.2" Radius="4"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToFavoutritesCommand}" />
                </Border.GestureRecognizers>
                <HorizontalStackLayout Spacing="16" VerticalOptions="Center">
                    <Image Source="favourite_icon_2.png" WidthRequest="24" HeightRequest="24" VerticalOptions="Center"/>
                    <Label Text="Favourites" FontSize="18" VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

            <!-- Notifications -->
            <Border Padding="12"
                    StrokeShape="RoundRectangle 20"
                    BackgroundColor="White"
                    HorizontalOptions="Fill">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="2,2" Opacity="0.2" Radius="4"/>
                </Border.Shadow>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoToNotificationsCommand}" />
                </Border.GestureRecognizers>
                <HorizontalStackLayout Spacing="16" VerticalOptions="Center">
                    <Image Source="notification_icon_2.png" WidthRequest="24" HeightRequest="24" VerticalOptions="Center"/>
                    <Label Text="Notifications" FontSize="18" VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

            <!-- Section: Account -->
            <Label Text="Account" FontSize="16" FontAttributes="Bold" TextColor="#4F378A" Margin="5,20,0,0"/>
            <BoxView HeightRequest="1" Color="#E0DCEC"/>

            <!-- Logout -->
            <Border Padding="12"
                    StrokeShape="RoundRectangle 20"
                    BackgroundColor="#FFE5E5"
                    HorizontalOptions="Fill">
                <Border.Shadow>
                    <Shadow Brush="Red" Offset="2,2" Opacity="0.2" Radius="4"/>
                </Border.Shadow>
                <HorizontalStackLayout Spacing="16" VerticalOptions="Center">
                    <Image Source="logout_icon.png" WidthRequest="24" HeightRequest="24" VerticalOptions="Center"/>
                    <Label Text="Logout" FontSize="18" TextColor="Red" VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

        </VerticalStackLayout>

    </Grid>
</ContentPage>
