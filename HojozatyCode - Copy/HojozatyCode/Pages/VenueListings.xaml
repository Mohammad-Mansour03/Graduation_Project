<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.CategoryVenuesPage"
             BackgroundColor="#FAFAFA">

    <ContentPage.Resources>
        <Color x:Key="PrimaryColor">#4F378A</Color>
        <Color x:Key="SecondaryColor">#6750A4</Color>
        <Color x:Key="SurfaceColor">#FFFFFF</Color>
        <Color x:Key="OnSurfaceColor">#1C1B1F</Color>
        <Color x:Key="BorderColor">#E7E0EC</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource OnSurfaceColor}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="OpenSans-Regular" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="OpenSans-SemiBold" />
            <Setter Property="HeightRequest" Value="48" />
        </Style>

        <Style TargetType="Picker">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="TextColor" Value="{StaticResource OnSurfaceColor}" />
            <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}" />
            <Setter Property="HeightRequest" Value="48" />
            <Setter Property="FontFamily" Value="OpenSans-Regular" />
            <Setter Property="TitleColor" Value="{StaticResource SecondaryColor}" />
        </Style>

        <Style x:Key="SectionTitle" TargetType="Label">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="Margin" Value="0,20,0,12" />
            <Setter Property="TextColor" Value="{StaticResource OnSurfaceColor}" />
            <Setter Property="FontFamily" Value="OpenSans-Bold" />
        </Style>

        <Style x:Key="SearchEntry" TargetType="Entry">
            <Setter Property="PlaceholderColor" Value="#999999" />
            <Setter Property="TextColor" Value="{StaticResource OnSurfaceColor}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="OpenSans-Regular" />
            <Setter Property="ClearButtonVisibility" Value="WhileEditing" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="20">
            

            <!-- Filter Controls -->
            <Grid ColumnDefinitions="*,*,*" 
                  ColumnSpacing="12" 
                  Margin="0,0,0,20">
                <Picker Title="{Binding Category}" 
                        ItemsSource="{Binding Categories}" 
                        SelectedItem="{Binding SelectedCategory}" 
                        Grid.Column="0"/>
                <Picker Title="Location" 
                        ItemsSource="{Binding Locations}" 
                        SelectedItem="{Binding SelectedLocation}" 
                        Grid.Column="1"/>
                <Button Text="Filters" 
                        Command="{Binding GoToFiltersPageCommand}" 
                        Grid.Column="2"/>
            </Grid>

            <!-- Date Picker -->
            <Button Text="Select date and time" 
                    Command="{Binding OpenDatePickerCommand}"
                    Margin="0,0,0,20"
                    BackgroundColor="{StaticResource SurfaceColor}"
                    TextColor="{StaticResource OnSurfaceColor}"
                    BorderColor="{StaticResource BorderColor}"
                    BorderWidth="1"/>

            <!-- Subcategories -->
            <Label Text="What kind of space are you looking for?" 
                   Style="{StaticResource SectionTitle}" 
                   HorizontalOptions="Start"/>
            <CollectionView ItemsSource="{Binding Subcategories}" 
                           ItemsLayout="HorizontalList" 
                           HeightRequest="140" 
                           Margin="0,0,0,20">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid WidthRequest="100" Margin="8">
                            <VerticalStackLayout Spacing="8">
                                <Frame CornerRadius="12" 
                                       HeightRequest="80" 
                                       WidthRequest="80" 
                                       Padding="0" 
                                       BackgroundColor="{StaticResource SurfaceColor}" 
                                       HasShadow="True">
                                    <Image Source="{Binding ImageUrl}" 
                                           Aspect="AspectFill"/>
                                    <Frame.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="Transparent" Offset="0.6"/>
                                            <GradientStop Color="#80000000" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </Frame.Background>
                                </Frame>
                                <Label Text="{Binding Name}" 
                                       FontSize="12" 
                                       FontFamily="OpenSans-SemiBold"
                                       HorizontalOptions="Center" 
                                       MaxLines="2" 
                                       LineBreakMode="TailTruncation"/>
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Venues List -->
            <Label Text="Available venues" 
                   Style="{StaticResource SectionTitle}" 
                   HorizontalOptions="Start"/>
            <CollectionView ItemsSource="{Binding Venues}" 
                           EmptyView="No venues found for this category">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="16" 
                               Margin="0,0,0,20" 
                               Padding="0" 
                               BackgroundColor="{StaticResource SurfaceColor}" 
                               HasShadow="True">
                            <Grid>
                                <Image Source="{Binding ImageUrl}" 
                                       Aspect="AspectFill"
                                       HeightRequest="200"/>
                                <BoxView BackgroundColor="#80000000" 
                                         CornerRadius="16"/>
                                <Grid RowDefinitions="*,Auto" 
                                      ColumnDefinitions="*,Auto" 
                                      Padding="16">
                                    <Label Text="{Binding VenueName}" 
                                           TextColor="White" 
                                           FontSize="18" 
                                           FontFamily="OpenSans-Bold"
                                           Grid.Row="0" 
                                           Grid.Column="0" 
                                           VerticalOptions="Start"/>
                                    <Frame BackgroundColor="{StaticResource PrimaryColor}" 
                                           CornerRadius="10" 
                                           Padding="12,6" 
                                           Grid.Row="1" 
                                           Grid.Column="0" 
                                           HorizontalOptions="Start" 
                                           VerticalOptions="End">
                                        <Label Text="{Binding InitialPrice, StringFormat='From ${0}/Hr'}" 
                                               TextColor="White" 
                                               FontSize="14"
                                               FontFamily="OpenSans-SemiBold"/>
                                    </Frame>
                                    <HorizontalStackLayout Grid.Row="1" 
                                                          Grid.Column="1" 
                                                          HorizontalOptions="End" 
                                                          VerticalOptions="End" 
                                                          Spacing="4">
                                        <Label Text="{Binding Rating}" 
                                               TextColor="White" 
                                               FontSize="14"
                                               FontFamily="OpenSans-SemiBold"/>
                                        <Label Text="â˜…" 
                                               TextColor="Gold" 
                                               FontSize="14"/>
                                        <Label Text="{Binding RatingCount, StringFormat='({0})'}" 
                                               TextColor="White" 
                                               FontSize="14"
                                               FontFamily="OpenSans-SemiBold"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>