<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:HojozatyCode.ViewModels"
             x:Class="HojozatyCode.Pages.HomePage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="True">
    

    <ScrollView>
        <StackLayout Padding="30" Spacing="20">
            
            <!-- Header Section -->
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto" >
                <VerticalStackLayout>
                    
                   <!--Back icon-->
                    <ImageButton Source="back_icon.png"
                             HeightRequest="30" WidthRequest="30"
                             VerticalOptions="Center" 
                             HorizontalOptions="Start"
                             Padding="5"
                             Margin="-15,10,0,0"
                             Command="{Binding NavigateBackCommand}"/>
                    
                    <!--The Header Content-->
                    <Label Text="What are you planning in " 
                           FontSize="18" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           Margin="0,40,0,0"/>
                    <Label Text="Jordan?" 
                           FontSize="18" 
                           HorizontalOptions="Center"
                           FontAttributes="Bold" 
                           TextColor="#4F378A" />
                </VerticalStackLayout>
                
                <!--Notification and profile icons-->
                <HorizontalStackLayout Spacing="10" 
                                       VerticalOptions="Start" 
                                       HorizontalOptions="End">


                    <ImageButton Source="notification_icon.png" 
                           HeightRequest="30" 
                           WidthRequest="30"
                           Margin="10,10,0,0"
                           Command="{Binding NavigateToNotificationsCommand}"/>
                    
                    <ImageButton Source="account_icon.png" 
                           HeightRequest="30"
                           WidthRequest="30"
                           Margin="10,10,0,0"
                           Command="{Binding GoToAccountCommand}"/>

                           
                </HorizontalStackLayout>
            </Grid>

            



            <!--The Activites types (Wedding , Meeting , Funeral , More)-->
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout Spacing="10" Padding="0,10">
                
                    <!--Wedding Activity-->
                    <Border StrokeShape="RoundRectangle 12" 
                            WidthRequest="100" 
                            HeightRequest="100"
                            BackgroundColor="#ECE6EE"
                            Padding="5">
                        
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding NavigateToCategoryCommand}" 
                                CommandParameter="Wedding"/>
                        </Border.GestureRecognizers>
                        
                        <VerticalStackLayout HorizontalOptions="Center"
                                             VerticalOptions="Center" 
                                             Spacing="5">
                            <Image Source="wedding_icon.png"
                                   WidthRequest="50"
                                   HeightRequest="50"/>
                            <Label Text="Wedding" 
                                   FontSize="14" 
                                   HorizontalOptions="Center"
                                   TextColor="black"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Border>

                    <!--Meeting Activity-->
                    <Border StrokeShape="RoundRectangle 12"
                            WidthRequest="100" 
                            HeightRequest="100" 
                            BackgroundColor="#ECE6EE"
                            Padding="5">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding NavigateToCategoryCommand}" 
                                CommandParameter="Meeting"/>
                        </Border.GestureRecognizers>
                        <VerticalStackLayout HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             Spacing="5">
                            <Image Source="meeting_icon.png"
                                   WidthRequest="50"
                                   HeightRequest="50"/>
                            <Label Text="Meeting" 
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   TextColor="black"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Border>

                    <!--Funeral Activity-->
                    <Border StrokeShape="RoundRectangle 12"
                            WidthRequest="100" 
                            HeightRequest="100"
                            BackgroundColor="#ECE6EE"
                            Padding="5">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding NavigateToCategoryCommand}" 
                                CommandParameter="Funeral"/>
                        </Border.GestureRecognizers>
                        <VerticalStackLayout HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             Spacing="5">
                            <Image Source="funeral_icon.png" 
                                   WidthRequest="50"
                                   HeightRequest="50"/>
                            <Label Text="Funeral"
                                   FontSize="14" 
                                   HorizontalOptions="Center"
                                   TextColor="black"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Border>

                    <!--Photography Activity-->
                    <Border StrokeShape="RoundRectangle 12" 
                            WidthRequest="100" 
                            HeightRequest="100" 
                            BackgroundColor="#ECE6EE"
                            Padding="5">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding NavigateToCategoryCommand}" 
                                CommandParameter="Photography"/>
                        </Border.GestureRecognizers>
                        <VerticalStackLayout HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             Spacing="5">
                            <Image Source="photography_icon.png"
                                   WidthRequest="50" 
                                   HeightRequest="50"/>
                            <Label Text="Photography"
                                   FontSize="14" 
                                   HorizontalOptions="Center"
                                   TextColor="black"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Border>

                    <!--Cultural Events Activity-->
                    <Border StrokeShape="RoundRectangle 12" 
                            WidthRequest="100" 
                            HeightRequest="100" 
                            BackgroundColor="#ECE6EE"
                            Padding="5">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding NavigateToCategoryCommand}" 
                                CommandParameter="Cultural Events"/>
                        </Border.GestureRecognizers>
                        <VerticalStackLayout HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             Spacing="5">
                            <Image Source="cultural_icon.png"
                                   WidthRequest="50" 
                                   HeightRequest="50"/>
                            <Label Text="Cultural Events"
                                   FontSize="13" 
                                   HorizontalOptions="Center"
                                   TextColor="black"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Border>

                    <!--Entertainment Social Activity-->
                    <Border StrokeShape="RoundRectangle 12" 
                            WidthRequest="100" 
                            HeightRequest="100" 
                            BackgroundColor="#ECE6EE"
                            Padding="5">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding NavigateToCategoryCommand}" 
                                CommandParameter="Entertainment"/>
                        </Border.GestureRecognizers>
                        <VerticalStackLayout HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             Spacing="5">
                            <Image Source="entertainment_icon_2.png"
                                   WidthRequest="50" 
                                   HeightRequest="50"/>
                            <Label Text="Entertainment Social"
                                   FontSize="14" 
                                   HorizontalOptions="Center"
                                   TextColor="black"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Border>

                    <!--Sports Activity-->
                    <Border StrokeShape="RoundRectangle 12" 
                            WidthRequest="100" 
                            HeightRequest="100" 
                            BackgroundColor="#ECE6EE"
                            Padding="5">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding NavigateToCategoryCommand}" 
                                CommandParameter="Sports"/>
                        </Border.GestureRecognizers>
                        <VerticalStackLayout HorizontalOptions="Center"
                                             VerticalOptions="Center"
                                             Spacing="5">
                            <Image Source="sports_icon.png"
                                   WidthRequest="50" 
                                   HeightRequest="50"/>
                            <Label Text="Sport"
                                   FontSize="14" 
                                   HorizontalOptions="Center"
                                   TextColor="black"
                                   FontAttributes="Bold"/>
                        </VerticalStackLayout>
                    </Border>
                </HorizontalStackLayout>
            </ScrollView>
            
            <!-- Inspiration Section --><!--
            <Border StrokeShape="RoundRectangle 12"
                    BackgroundColor="#FFE1DE"
                    Padding="15">
                <Grid>
                    --><!-- Main Content --><!--
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Find new inspiration"
                               FontSize="16"
                               FontAttributes="Bold"/>
                        <Label Text="Not sure what to book?"
                               FontSize="12"/>
                      
                        --><!--Explore Button--><!--
                        <Button Text="Explore" 
                         BackgroundColor="#E85C4A" 
                            TextColor="White" 
                            CornerRadius="30" 
                            HorizontalOptions="Start"
                            WidthRequest="90" 
                           Margin="0,15,0,0"
                           Command="{Binding GoToExploreCommand}"/>
                    </VerticalStackLayout>-->

                    <!--Flower Image Positioned to the Right --><!--
                    <Image Source="flower.png"
                           WidthRequest="100" 
                           HeightRequest="100" 
                           HorizontalOptions="End" 
                           VerticalOptions="Center" 
                           Margin="0,0,-20,-50"/>
                </Grid>
            </Border>-->

            <!-- Venues Section -->
            <Label Text="Available venues"
  Style="{StaticResource SectionTitle}" />

            <CollectionView ItemsSource="{Binding HomeVenues}"
                   EmptyView="No venues found for this category"
                   Margin="0,0,0,20">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                        <Border StrokeThickness="0"
                       StrokeShape="RoundRectangle 16"
                       BackgroundColor="{StaticResource SurfaceColor}"
                       Margin="0,0,0,24"
                       Padding="0">
                            <Grid>
                                <!-- Horizontal Images Carousel -->
                                <CollectionView ItemsSource="{Binding ImageUrls}"
                               HeightRequest="200">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Image Source="{Binding .}"
                                  Aspect="AspectFill"
                                  HeightRequest="200"
                                  WidthRequest="400" />
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                                <!-- Transparent overlay to catch taps -->
                                <Grid BackgroundColor="Transparent">
                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer 
                           Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:HomeViewModel}}, Path=VenueSelectedCommand}"
                           CommandParameter="{Binding .}" />
                                    </Grid.GestureRecognizers>
                                </Grid>

                                <!-- Dark overlay for text visibility -->
                                <BoxView BackgroundColor="#80000000" />

                                <!-- Info (Name, Price, Rating) -->
                                <Grid Padding="16"
                         RowDefinitions="*,Auto"
                         ColumnDefinitions="*,Auto">
                                    <Label Text="{Binding VenueName}"
                          FontSize="20"
                          TextColor="White"
                          FontFamily="OpenSans-Bold"
                          Grid.Row="0"
                          Grid.Column="0"
                          VerticalOptions="Start" />

                                    <!-- Price Tag -->
                                    <Border BackgroundColor="#493971"
                           StrokeShape="RoundRectangle 10"
                           Padding="8,4"
                           HorizontalOptions="Start"
                           VerticalOptions="Start"
                           Grid.Row="0"
                           Grid.Column="1">
                                        <Label Text="{Binding InitialPrice, StringFormat='From ${0}/Hr'}"
                              TextColor="White"
                              FontSize="14"
                              FontFamily="OpenSans-SemiBold" />
                                    </Border>

                                    <!-- Rating -->
                                    <HorizontalStackLayout Grid.Row="1"
                                          Grid.Column="1"
                                          HorizontalOptions="End"
                                          VerticalOptions="End"
                                          Spacing="4">
                                        <Label Text="{Binding Rating}" TextColor="White" FontSize="14" FontFamily="OpenSans-SemiBold"/>
                                        <Label Text="★" TextColor="Gold" FontSize="14"/>
                                        <Label Text="{Binding RatingCount, StringFormat='({0})'}"
                              TextColor="White" FontSize="14" FontFamily="OpenSans-SemiBold"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </StackLayout>
    </ScrollView>
    
</ContentPage>