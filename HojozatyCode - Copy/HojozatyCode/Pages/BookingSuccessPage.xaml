<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.BookingSuccessPage"
             Title="Book Appointment"
             BackgroundColor="{AppThemeBinding Light=#F8F9FA, Dark=#121212}"
              Shell.TabBarIsVisible="True">
    <ScrollView>
        <Grid VerticalOptions="Center" HorizontalOptions="Center"
              RowSpacing="20" Padding="20"
              RowDefinitions="Auto,Auto,Auto,Auto" 
              MaximumWidthRequest="500">
            
            <!-- Success Icon -->
            <Border Grid.Row="0"
                    WidthRequest="120"
                    HeightRequest="120"
                    StrokeShape="RoundRectangle 25"
                    BackgroundColor="#4CAF50"
                    Padding="10"
                    Margin="0,20,0,10"
                    HorizontalOptions="Center">
                <Label Text="âœ“"
                       FontSize="70"
                       TextColor="White"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Border>
            
            <!-- Success Message -->
            <Label Grid.Row="1"
                   Text="Booking and Payment Successful!"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#222"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   MaxLines="2"
                   LineBreakMode="WordWrap" />
            
            <Label Grid.Row="2"
                   Text="Thank you for your booking.&#10;You will receive a confirmation soon."
                   FontSize="16"
                   TextColor="#666"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,20"/>
            
            <!-- Back to Home Button -->
            <!-- <Button Grid.Row="3"
                    Text="Back to Home"
                    BackgroundColor="#4F378A"
                    TextColor="White"
                    CornerRadius="25"
                    WidthRequest="200"
                    HeightRequest="54"
                    FontSize="18"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    Margin="0,10,0,20"
                    Command="{Binding HomeClickedCommand}"/> -->
        </Grid>
    </ScrollView>
</ContentPage>
