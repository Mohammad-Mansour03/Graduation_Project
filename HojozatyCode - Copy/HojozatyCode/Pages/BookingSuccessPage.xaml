<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.BookingSuccessPage"
             Shell.TabBarIsVisible="True"
             BackgroundColor="#F9F6FC">

    <VerticalStackLayout Spacing="24"
                        VerticalOptions="Center"
                        HorizontalOptions="Center"
                        Padding="24"
                        MaximumWidthRequest="500">

        <!-- Success Icon Container -->
        <Border HorizontalOptions="Center"
                WidthRequest="120"
                HeightRequest="120"
                Stroke="Transparent"
                BackgroundColor="#4F378A"
                StrokeShape="RoundRectangle 60"
                Padding="0"
                Margin="0,20,0,10">
            <Label Text="âœ“"
                   FontSize="48"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
        </Border>

        <!-- Success Messages -->
        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
            <Label Text="Booking and Payment Successful!"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#1F2937"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   MaxLines="2"
                   LineBreakMode="WordWrap"/>

            <Label Text="Thank you for your booking.&#10;You will receive a confirmation soon."
                   FontSize="16"
                   TextColor="#6B7280"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   Margin="0,0,0,20"/>
        </VerticalStackLayout>

        <!-- Back to Home Button -->
        <Button Text="Back to Home"
                BackgroundColor="#4F378A"
                TextColor="White"
                CornerRadius="25"
                WidthRequest="200"
                HeightRequest="54"
                FontSize="18"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,10,0,20"
                Command="{Binding HomeClickedCommand}" />
    </VerticalStackLayout>
</ContentPage>
