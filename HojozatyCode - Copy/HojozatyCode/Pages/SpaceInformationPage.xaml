<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:HojozatyCode.ViewModels"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             xmlns:converters="clr-namespace:HojozatyCode.Converters"
             x:Class="HojozatyCode.Pages.SpaceInformationPage"
             Shell.TabBarIsVisible="False"
             x:DataType="viewModels:AddSpaceViewModel"
             BackgroundColor="#F9F6FC">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />

            <!-- Color Palette -->
            <Color x:Key="PrimaryColor">#4F378A</Color>
            <Color x:Key="SecondaryColor">#6750A4</Color>
            <Color x:Key="LightAccent">#E8DEF8</Color>
            <Color x:Key="DarkText">#1C1B1F</Color>
            <Color x:Key="LightText">#F4EFF4</Color>
            <Color x:Key="ErrorColor">#B3261E</Color>
            <Color x:Key="BorderColor">#E0DCEC</Color>
            <Color x:Key="SurfaceColor">White</Color>

            <!-- Styles -->
            <Style x:Key="InputCard" TargetType="Border">
                <Setter Property="Stroke" Value="{StaticResource BorderColor}" />
                <Setter Property="StrokeThickness" Value="1" />
                <Setter Property="Padding" Value="15" />
                <Setter Property="Margin" Value="0,8" />
                <Setter Property="StrokeShape" Value="RoundRectangle 12" />
                <Setter Property="BackgroundColor" Value="{StaticResource SurfaceColor}" />
            </Style>

            <Style x:Key="PageTitle" TargetType="Label">
                <Setter Property="FontSize" Value="28" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="{StaticResource DarkText}" />
                <Setter Property="Margin" Value="0,0,0,15" />
            </Style>

            <Style x:Key="InputLabel" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="{StaticResource SecondaryColor}" />
                <Setter Property="Margin" Value="0,0,0,5" />
            </Style>

            <Style x:Key="InputField" TargetType="InputView">
                <Setter Property="TextColor" Value="{StaticResource DarkText}" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="BackgroundColor" Value="Transparent" />
            </Style>

            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="25" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="Margin" Value="0,25,0,10" />
            </Style>

            <Style x:Key="SearchButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Padding" Value="12,0" />
                <Setter Property="FontSize" Value="14" />
            </Style>

            <Style x:Key="ErrorMessageLabel" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="{StaticResource ErrorColor}" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="Margin" Value="0,10" />
            </Style>

            <Style x:Key="LocationLabel" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="TextColor" Value="{StaticResource SecondaryColor}" />
                <Setter Property="Margin" Value="0,5,0,0" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="20,15">
            <!-- Page Header -->
            <Label Text="Add Information About Your Space"
                   Style="{StaticResource PageTitle}" />

            <BoxView HeightRequest="1" Color="{StaticResource BorderColor}" Margin="0,0,0,10"/>

            <!-- Space Name -->
            <Border Style="{StaticResource InputCard}">
                <VerticalStackLayout Spacing="2">
                    <Label Text="Space Name" Style="{StaticResource InputLabel}" />
                    <Entry Placeholder="Enter space name"
                           Style="{StaticResource InputField}"
                           Text="{Binding SpaceName}"/>
                </VerticalStackLayout>
            </Border>

            <!-- City Selection -->
            <Border Style="{StaticResource InputCard}">
                <VerticalStackLayout Spacing="2">
                    <Label Text="City" Style="{StaticResource InputLabel}" />
                    <Border BackgroundColor="{StaticResource SurfaceColor}" 
                           Stroke="{StaticResource BorderColor}" 
                           StrokeThickness="1" 
                           StrokeShape="RoundRectangle 8"
                           Padding="10,8">
                        <HorizontalStackLayout Spacing="8" HorizontalOptions="Fill">
                            <Picker ItemsSource="{Binding Cities}"
                                    SelectedItem="{Binding SelectedCity, Mode=TwoWay}"
                                    Title="Select city"
                                    Style="{StaticResource InputField}"
                                    HorizontalOptions="FillAndExpand"/>
                            <Image Source="location.png" HeightRequest="20" WidthRequest="20" 
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </Border>

            <!-- Contact Information -->
            <Label Text="Contact Information" 
                   Style="{StaticResource InputLabel}"
                   FontAttributes="Bold"
                   Margin="0,15,0,5"/>

            <!-- Phone -->
            <Border Style="{StaticResource InputCard}">
                <VerticalStackLayout Spacing="2">
                    <Label Text="Phone Number" Style="{StaticResource InputLabel}" />
                    <Entry Placeholder="Enter phone number"
                           Style="{StaticResource InputField}"
                           Keyboard="Telephone"
                           Text="{Binding Phone}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Email -->
            <Border Style="{StaticResource InputCard}">
                <VerticalStackLayout Spacing="2">
                    <Label Text="Email" Style="{StaticResource InputLabel}" />
                    <Entry Placeholder="Enter email address"
                           Style="{StaticResource InputField}"
                           Keyboard="Email"
                           Text="{Binding Email}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Pricing and Capacity -->
            <Label Text="Pricing | Capacity" 
                   Style="{StaticResource InputLabel}"
                   FontAttributes="Bold"
                   Margin="0,15,0,5"/>

            <!-- Initial Price -->
            <Border Style="{StaticResource InputCard}">
                <VerticalStackLayout Spacing="2">
                    <Label Text="Initial Price" Style="{StaticResource InputLabel}" />
                    <Entry Placeholder="Enter starting price"
                           Style="{StaticResource InputField}"
                           Keyboard="Numeric"
                           Text="{Binding InitialPrice}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Maximum Capacity -->
            <Border Style="{StaticResource InputCard}">
                <VerticalStackLayout Spacing="2">
                    <Label Text="Maximum Capacity" Style="{StaticResource InputLabel}" />
                    <Entry Placeholder="Enter maximum guests"
                           Style="{StaticResource InputField}"
                           Keyboard="Numeric"
                           Text="{Binding CapacityInput}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Category -->
            <Border Style="{StaticResource InputCard}">
                <VerticalStackLayout Spacing="2">
                    <Label Text="Category" Style="{StaticResource InputLabel}" />
                    <Picker ItemsSource="{Binding AvailableCategories}"
                            SelectedItem="{Binding Category}"
                            Title="Select category"
                            Style="{StaticResource InputField}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Description -->
            <Border Style="{StaticResource InputCard}">
                <VerticalStackLayout Spacing="2">
                    <Label Text="Description" Style="{StaticResource InputLabel}" />
                    <Editor Placeholder="Describe your space..."
                            Style="{StaticResource InputField}"
                            HeightRequest="120"
                            AutoSize="TextChanges"
                            Text="{Binding Description}"/>
                </VerticalStackLayout>
            </Border>

            <!-- Location Section -->
            <Label Text="Location" 
                   Style="{StaticResource InputLabel}"
                   FontAttributes="Bold"
                   Margin="0,15,0,5"/>

            <!-- Search Location -->
            <Grid Margin="0,0,0,10">
                <Border Style="{StaticResource InputCard}" Padding="0">
                    <Grid ColumnDefinitions="*,Auto" Padding="10">
                        <Entry x:Name="SearchBox" 
                               Placeholder="Search for location..." 
                               Style="{StaticResource InputField}"
                               Grid.Column="0"
                               TextColor="Black"/>

                        <Grid Grid.Column="1" HorizontalOptions="End">
                            <Button Text="Search" 
                                    Style="{StaticResource SearchButton}"
                                    Command="{Binding SearchLocationCommand}" 
                                    CommandParameter="{Binding Source={x:Reference SearchBox}, Path=Text}"
                                    IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}" />
                            <ActivityIndicator IsRunning="{Binding IsLoading}"
                                             IsVisible="{Binding IsLoading}"
                                             Color="{StaticResource PrimaryColor}"
                                             HorizontalOptions="Center" />
                        </Grid>
                    </Grid>
                </Border>
            </Grid>

            <!-- Map -->
            <Border Stroke="{StaticResource BorderColor}" 
                    StrokeThickness="1" 
                    StrokeShape="RoundRectangle 12"
                    Padding="0"
                    Margin="0,0,0,10">
                <maps:Map x:Name="VenueMap"
                          HeightRequest="250"
                          IsShowingUser="True"
                          MapClicked="OnMapClicked" />
            </Border>

            <!-- Selected Location -->
            <Label Text="Selected Location:" 
                   Style="{StaticResource InputLabel}"
                   FontAttributes="Bold"/>
            <Label Text="{Binding SelectedLocation}"
                   Style="{StaticResource LocationLabel}"/>

            <!-- Error Message -->
            <Label Text="{Binding ErrorMessage}" 
                   Style="{StaticResource ErrorMessageLabel}"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"/>

            <!-- Next Button -->
            <Button Text="Continue"
                    Style="{StaticResource PrimaryButton}"
                    Command="{Binding NavigateToSpacePicturesCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>