<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:HojozatyCode.ViewModels"
             x:Class="HojozatyCode.Pages.ForgotPasswordPage"
             Title="Reset Password"
             BackgroundColor="White">

    <ContentPage.BindingContext>
        <viewmodel:ForgotPasswordViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="30,40" Spacing="20" VerticalOptions="Center">
            <!-- Header -->
            <VerticalStackLayout Spacing="10">

                <Label Text="Reset Password" 
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#4F378A"
                       HorizontalOptions="Center" />

                <Label Text="Enter your email to receive an OTP" 
                       FontSize="16"
                       TextColor="#666666"
                       HorizontalOptions="Center" />
            </VerticalStackLayout>

            <!-- Email Input -->
            <VerticalStackLayout Spacing="5">
                <Label Text="Email Address"
                       FontSize="14"
                       TextColor="#4F378A" />

                <Entry Placeholder="your@email.com" 
                       Text="{Binding EmailL}" 
                       Keyboard="Email"
                       TextColor="Black"
                       BackgroundColor="#F5F5F5"
                       HeightRequest="50"
                       ClearButtonVisibility="WhileEditing" />
            </VerticalStackLayout>

            <!-- Send OTP Button -->
            <Button Text="Send OTP" 
                    Command="{Binding SendOtpCommand}"
                    BackgroundColor="#4F378A"
                    TextColor="White"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HeightRequest="50"
                    Margin="0,10" />

            <!-- Message Display -->
            <Label Text="{Binding Message}" 
                   TextColor="#D32F2F"
                   FontSize="14"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

            
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
