<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:HojozatyCode.ViewModels"
             x:Class="HojozatyCode.Pages.ForgotPasswordPage"
             Title="Reset Password">

    <ContentPage.BindingContext>
        <viewmodel:ForgotPasswordViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20">
        <Label Text="Enter your email to receive an OTP" />
        <Entry Placeholder="Email" Text="{Binding EmailL}" Keyboard="Email" />
        <Button Text="Send OTP" Command="{Binding SendOtpCommand}" />
        <Label Text="{Binding Message}" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>