                    </Grid>
                </Frame>

                <!-- Text Message -->
                <Label Text="Thanks! I found this template"
                       Padding="16,8"
                       BackgroundColor="#f8f9fa"
                       HorizontalOptions="Start"/>

                <!-- Link Message -->
                <Frame BackgroundColor="#f8f9fa"
                       CornerRadius="12"
                       Padding="16"
                       HasShadow="False">
                    <Label Text="https://corporationtemplate.webflow.io"
                           TextColor="#6B46C1"/>
                </Frame>

                <!-- Reply Messages -->
                <Frame BackgroundColor="#6B46C1"
                       Padding="16,8"
                       CornerRadius="20"
                       HorizontalOptions="End"
                       HasShadow="False">
                    <Label Text="Yes, we offer web design and web development services!"
                           TextColor="White"/>
                </Frame>

                <Frame BackgroundColor="#6B46C1"
                       Padding="16,8"
                       CornerRadius="20"
                       HorizontalOptions="End"
                       HasShadow="False">
                    <Label Text="I'll share with you a PDF that includes all the information about our services! You can find more information on our"
