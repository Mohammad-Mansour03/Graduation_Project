<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.ChatPage"
             Shell.TabBarIsVisible="False"
             Title="ChatPage">
    <!-- Header -->
    <Grid RowDefinitions="Auto,*,Auto">
        <Grid Padding="16,8" BackgroundColor="White">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <ImageButton Grid.Column="0" 
                             Source="https://cdn4.iconfinder.com/data/icons/linecon/512/photo-256.png"
                             BackgroundColor="Transparent"/>
                
                <StackLayout Grid.Column="1" Orientation="Vertical" Margin="16,0">
                    <Label Text="OWNER" 
                           FontAttributes="Bold"
                           TextColor="Black"/>
                    <Label Text="Active 19m ago"
                           TextColor="Gray"
                           FontSize="12"/>
                </StackLayout>
                
                <!-- <ImageButton Grid.Column="2"
                             Source="https://cdn3.iconfinder.com/data/icons/google-material-design-icons/48/ic_info_outline_48px-256.png"
                             BackgroundColor="Transparent"/> -->
            </Grid>
        </Grid>

        <!-- Chat Messages -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="16" Spacing="16">
                
                <!-- Template Card -->
                <Border BackgroundColor="#f8f9fa" 
                        StrokeShape="RoundRectangle 12"
                        Padding="16">
                    <VerticalStackLayout>
                        <Image Source="https://hebbkx1anhila5yf.public.blob.vercel-storage.com/Screenshot_22.jpg-gFTIW9Lozwa4RaopIwmxviHyMUft8m.jpeg"
                               HeightRequest="120"
                               Aspect="AspectFill"/>
                        <Label Text="BRIX Templates | Premium"
                               FontAttributes="Bold"
                               Margin="0,8"/>
                        <Label Text="Webflow Templates &amp; UI Kits"
                               TextColor="Gray"/>
                    </VerticalStackLayout>
                </Border>

                <!-- Voice Message -->
                <Border BackgroundColor="#6B46C1"
                        StrokeShape="RoundRectangle 24"
                        Padding="16,8">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <ImageButton 
                                Source="https://cdn2.iconfinder.com/data/icons/css-vol-2/24/play-button-512.png"
                                BackgroundColor="Transparent"/>
                        <Border Grid.Column="1"
                                BackgroundColor="White"
                                Opacity="0.3"
                                HeightRequest="24"
                                StrokeShape="RoundRectangle 12">
                            <!-- Waveform visualization would go here -->
                        </Border>
                        <Label Grid.Column="2"
                               Text="14:37"
                               TextColor="White"/>
                    </Grid>
                </Border>

                <!-- Text Message -->
                <Label Text="Thanks! I found this template"
                       Padding="16,8"
                       BackgroundColor="#f8f9fa"
                       HorizontalOptions="Start"/>

                <!-- Link Message -->
                <!-- <Border BackgroundColor="#f8f9fa"
                        StrokeShape="RoundRectangle 12"
                        Padding="16">
                    <Label Text="https://corporationtemplate.webflow.io"
                           TextColor="#6B46C1"/>
                </Border> -->

                <!-- Reply Messages -->
                <Border BackgroundColor="#6B46C1"
                        Padding="16,8"
                        StrokeShape="RoundRectangle 20"
                        HorizontalOptions="End">
                    <Label Text="Yes, we offer web design and web development services!"
                           TextColor="White"/>
                </Border>

                <Border BackgroundColor="#6B46C1"
                        Padding="16,8"
                        StrokeShape="RoundRectangle 20"
                        HorizontalOptions="End">
                    <Label Text="I'll share with you a PDF that includes all the information about our services! You can find more information on our"
                           TextColor="White"/>
                </Border>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Input Bar -->
        <Grid Grid.Row="2" 
              ColumnDefinitions="Auto,Auto,*,Auto,Auto"
              Padding="10,8"
              ColumnSpacing="8"
              BackgroundColor="#F3F3F3">
            
            <ImageButton Grid.Column="0"
                         Source="https://cdn4.iconfinder.com/data/icons/evil-icons-user-interface/64/picture-256.png"
                         HeightRequest="24"
                         BackgroundColor="Transparent"/>
            
            <ImageButton Grid.Column="1"
                        HeightRequest="24"
                         Source="https://cdn4.iconfinder.com/data/icons/ionicons/512/icon-ios7-mic-outline-256.png"
                         BackgroundColor="Transparent"/>
            
            <Border Grid.Column="2"
                   BackgroundColor="#f8f9fa"
                   Padding="16,8"
                   StrokeShape="RoundRectangle 20">
                <Entry Text="Message"
                       TextColor="Gray"
                       VerticalOptions="Center"/>
            </Border>
            
            <ImageButton Grid.Column="4"
                         CornerRadius="12"
                         WidthRequest="24"
                         Source="https://cdn4.iconfinder.com/data/icons/multimedia-75/512/multimedia-42-256.png"
             />
        </Grid>
    </Grid>
</ContentPage>