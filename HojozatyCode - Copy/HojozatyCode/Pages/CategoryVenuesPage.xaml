<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.CategoryVenuesPage"
             BackgroundColor="#FAFAFA">

    <ContentPage.Resources>
        <Color x:Key="PrimaryColor">#4F378A</Color>
        <Color x:Key="LightPrimaryColor">#6750A4</Color>
        <Color x:Key="SurfaceColor">#FFFFFF</Color>
        <Color x:Key="OnSurfaceColor">#1C1B1F</Color>
        <Color x:Key="SecondaryColor">#625B71</Color>
        <Color x:Key="BackgroundColor">#FAFAFA</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource OnSurfaceColor}" />
            <Setter Property="FontFamily" Value="OpenSans-Regular" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="OpenSans-SemiBold" />
            <Setter Property="HeightRequest" Value="40" />
        </Style>

        <Style x:Key="FilterChip" TargetType="Border">
            <Setter Property="Stroke" Value="#E7E0EC" />
            <Setter Property="Background" Value="{StaticResource SurfaceColor}" />
            <Setter Property="StrokeThickness" Value="1" />
            <Setter Property="StrokeShape">
                <Setter.Value>
                    <RoundRectangle CornerRadius="20" />
                </Setter.Value>
            </Setter>
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="HeightRequest" Value="40" />
        </Style>

        <Style x:Key="SectionTitle" TargetType="Label">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="Margin" Value="0,20,0,12" />
            <Setter Property="TextColor" Value="{StaticResource OnSurfaceColor}" />
            <Setter Property="FontFamily" Value="OpenSans-Bold" />
        </Style>

        <Style x:Key="SubcategoryLabel" TargetType="Label">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="MaxLines" Value="2" />
            <Setter Property="LineBreakMode" Value="TailTruncation" />
            <Setter Property="TextColor" Value="{StaticResource OnSurfaceColor}" />
            <Setter Property="Margin" Value="0,4,0,0" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="0" Padding="20">
            <!-- Filter Section -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12" Margin="0,0,0,16">
                <Border Style="{StaticResource FilterChip}">
                    <Label Text="{Binding Category}" 
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontFamily="OpenSans-SemiBold"/>
                </Border>

                <Border Style="{StaticResource FilterChip}" Grid.Column="1">
                    <Label Text="{Binding Location}" 
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           FontFamily="OpenSans-SemiBold"/>
                </Border>

                <Button Text="Filters" 
                        Command="{Binding GoToFiltersPageCommand}"
                        Grid.Column="2"/>
            </Grid>

            <!-- Date Picker -->
            <Border Style="{StaticResource FilterChip}" Margin="0,0,0,24">
                <HorizontalStackLayout Spacing="8" VerticalOptions="Center">
                    <Image Source="calendar_icon.png" HeightRequest="20" WidthRequest="20" VerticalOptions="Center"/>
                    <Label Text="Date and time" 
                           FontFamily="OpenSans-SemiBold"
                           VerticalOptions="Center"/>
                </HorizontalStackLayout>
            </Border>

            <!-- Subcategories -->
            <Label Text="What kind of space are you looking for?" Style="{StaticResource SectionTitle}"/>
            <CollectionView ItemsSource="{Binding Subcategories}" ItemsLayout="HorizontalList" HeightRequest="140" Margin="0,0,0,16">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid WidthRequest="100" Margin="8">
                            <VerticalStackLayout Spacing="4">
                                <Border StrokeThickness="0" Background="White" HeightRequest="80" WidthRequest="80" StrokeShape="RoundRectangle 12">
                                    <Grid>
                                        <Image Source="{Binding ImageUrl}" Aspect="AspectFill"/>
                                        <BoxView>
                                            <BoxView.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="Transparent" Offset="0.6"/>
                                                    <GradientStop Color="#80000000" Offset="1.0"/>
                                                </LinearGradientBrush>
                                            </BoxView.Background>
                                        </BoxView>
                                    </Grid>
                                </Border>
                                <Label Text="{Binding Name}" Style="{StaticResource SubcategoryLabel}"/>
                            </VerticalStackLayout>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Venues List -->
            <Label Text="Available venues" Style="{StaticResource SectionTitle}"/>
            <CollectionView ItemsSource="{Binding Venues}" EmptyView="No venues found for this category">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeThickness="0" StrokeShape="RoundRectangle 16" Margin="0,0,0,16" Padding="0" Background="White" >
                            <Grid>
                                <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="200"/>
                                <BoxView BackgroundColor="#80000000"/>
                                <Grid RowDefinitions="*,Auto" ColumnDefinitions="*,Auto" Padding="16">
                                    <Label Text="{Binding VenueName}" TextColor="White" FontSize="18" 
                                           FontAttributes="Bold" Grid.Row="0" Grid.Column="0" 
                                           VerticalOptions="Start" FontFamily="OpenSans-Bold"/>

                                    <Border StrokeThickness="0" Background="{StaticResource PrimaryColor}" Padding="12,6" Grid.Row="1" Grid.Column="0" StrokeShape="RoundRectangle 10">
                                        <Label Text="{Binding InitialPrice, StringFormat='From ${0}/Hr'}" 
                                               TextColor="White" FontSize="14" FontFamily="OpenSans-SemiBold"/>
                                    </Border>

                                    <HorizontalStackLayout Grid.Row="1" Grid.Column="1" 
                                                          HorizontalOptions="End" VerticalOptions="End" 
                                                          Spacing="4">
                                        <Label Text="{Binding Rating}" TextColor="White" FontSize="14"
                                               FontFamily="OpenSans-SemiBold"/>
                                        <Label Text="â˜…" TextColor="Gold" FontSize="14"/>
                                        <Label Text="{Binding RatingCount, StringFormat='({0})'}" 
                                               TextColor="White" FontSize="14" FontFamily="OpenSans-SemiBold"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
