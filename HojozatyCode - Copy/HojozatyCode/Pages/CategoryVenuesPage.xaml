<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.CategoryVenuesPage"
             BackgroundColor="#FAFAFA">

    <ContentPage.Resources>
        <Color x:Key="PrimaryColor">#4F378A</Color>
        <Color x:Key="SecondaryColor">#6750A4</Color>
        <Color x:Key="SurfaceColor">#FFFFFF</Color>
        <Color x:Key="OnSurfaceColor">#1C1B1F</Color>
        <Color x:Key="BorderColor">#E7E0EC</Color>

        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{StaticResource OnSurfaceColor}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="OpenSans-Regular" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
            <Setter Property="TextColor" Value="White" />
            <Setter Property="CornerRadius" Value="20" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="OpenSans-SemiBold" />
            <Setter Property="HeightRequest" Value="48" />
        </Style>

        <Style x:Key="SectionTitle" TargetType="Label">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontAttributes" Value="Bold" />
            <Setter Property="Margin" Value="0,20,0,12" />
            <Setter Property="TextColor" Value="{StaticResource OnSurfaceColor}" />
            <Setter Property="FontFamily" Value="OpenSans-Bold" />
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="16" Padding="20">

            <!-- Top Info Row -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="12">
                <Border BackgroundColor="{StaticResource SurfaceColor}" 
                        Stroke="{StaticResource BorderColor}"                   
                        StrokeThickness="2" 
                        StrokeShape="RoundRectangle 12"
                        Padding="5"
                        Grid.Column="0">
                    <HorizontalStackLayout Spacing="-10" HorizontalOptions="Center">
                        <Image Source="location_icon.png" HeightRequest="16" WidthRequest="16" />
                        <Label Text="{Binding Category}" FontAttributes="Bold" FontSize="Medium" />
                    </HorizontalStackLayout>
                </Border>

                <Border BackgroundColor="{StaticResource SurfaceColor}" 
                        Stroke="{StaticResource BorderColor}" 
                        StrokeThickness="1" 
                        StrokeShape="RoundRectangle 12"
                        Padding="8"
                        Grid.Column="1">
                    <HorizontalStackLayout Spacing="6" HorizontalOptions="Center">
                        <Image Source="location.png" HeightRequest="16" WidthRequest="16" />
                        <Label Text="{Binding Location}" FontAttributes="Bold" FontSize="Medium" />
                    </HorizontalStackLayout>
                </Border>

                <Border BackgroundColor="{StaticResource SecondaryColor}" 
                        StrokeShape="RoundRectangle 12"
                        Padding="10"
                        Grid.Column="2">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoToFiltersPageCommand}" />
                    </Border.GestureRecognizers>
                    <Image Source="filter.png" HeightRequest="20" WidthRequest="20" HorizontalOptions="Center" />
                </Border>
            </Grid>

            <!-- Date Picker -->
            <Border BackgroundColor="{StaticResource SurfaceColor}"
                    StrokeShape="RoundRectangle 12"
                    Padding="10">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenDatePickerCommand}" />
                </Border.GestureRecognizers>
                <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Image Source="calenadar.png" HeightRequest="20" WidthRequest="20" />
                    <Label Text="Select date and time"
                           FontAttributes="Bold"
                           TextColor="{StaticResource OnSurfaceColor}" />
                </HorizontalStackLayout>
            </Border>

            <!-- Subcategories -->
            <Label Text="What kind of space are you looking for?"
                   Style="{StaticResource SectionTitle}" />

            <CollectionView ItemsSource="{Binding SubCategories}"
                            ItemsLayout="HorizontalList"
                            HeightRequest="150"
                            Margin="0,0,0,20">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout WidthRequest="110" Margin="4" Spacing="6">
                            <Border Stroke="{StaticResource BorderColor}"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 12"
                                    BackgroundColor="{StaticResource SurfaceColor}"
                                    HeightRequest="90"
                                    WidthRequest="90">
                                <Image Source="{Binding ImageUrl}" Aspect="AspectFill" />
                            </Border>
                            <Label Text="{Binding Name}"
                                   FontSize="13"
                                   FontFamily="OpenSans-SemiBold"
                                   HorizontalTextAlignment="Center"
                                   MaxLines="2"
                                   LineBreakMode="TailTruncation"/>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Venues Section -->
            <Label Text="Available venues"
                   Style="{StaticResource SectionTitle}" />

            <CollectionView ItemsSource="{Binding Venues}"
                            EmptyView="No venues found for this category"
                            Margin="0,0,0,20">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border StrokeThickness="0"
                                StrokeShape="RoundRectangle 16"
                                BackgroundColor="{StaticResource SurfaceColor}"
                                Margin="0,0,0,24"
                                Padding="0">
                            <Grid>
                                <Image Source="{Binding ImageUrl}" Aspect="AspectFill" HeightRequest="200" />
                                <BoxView BackgroundColor="#80000000" />

                                <Grid Padding="16"
                                      RowDefinitions="*,Auto"
                                      ColumnDefinitions="*,Auto">
                                    <Label Text="{Binding VenueName}"
                                           FontSize="20"
                                           TextColor="White"
                                           FontFamily="OpenSans-Bold"
                                           Grid.Row="0"
                                           Grid.Column="0"
                                           VerticalOptions="Start" />

                                    <!-- Price Tag -->
                                    <Border BackgroundColor="#493971"
                                            StrokeShape="RoundRectangle 10"
                                            Padding="8,4"
                                            HorizontalOptions="Start"
                                            VerticalOptions="Start"
                                            Grid.Row="0"
                                            Grid.Column="1">
                                        <Label Text="{Binding InitialPrice, StringFormat='From ${0}/Hr'}"
                                               TextColor="White"
                                               FontSize="14"
                                               FontFamily="OpenSans-SemiBold"/>
                                    </Border>

                                    <!-- Rating -->
                                    <HorizontalStackLayout Grid.Row="1"
                                                           Grid.Column="1"
                                                           HorizontalOptions="End"
                                                           VerticalOptions="End"
                                                           Spacing="4">
                                        <Label Text="{Binding Rating}" TextColor="White" FontSize="14" FontFamily="OpenSans-SemiBold"/>
                                        <Label Text="â˜…" TextColor="Gold" FontSize="14"/>
                                        <Label Text="{Binding RatingCount, StringFormat='({0})'}"
                                               TextColor="White" FontSize="14" FontFamily="OpenSans-SemiBold"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
