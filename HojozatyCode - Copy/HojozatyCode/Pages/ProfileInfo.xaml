<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.ProfileInfo"
             Title="ProfileInfo"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#ECE6F0">
    <ScrollView>
        <VerticalStackLayout Padding="20,40,20,20" Spacing="20">
            
            <!-- Header -->
            <Label 
                Text="Profile info"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center" />

            <!-- Full Name -->
            <VerticalStackLayout Spacing="5">
                <Label 
                    Text="Fullname"
                    TextColor="#666666"
                    FontSize="14"/>
                <Entry 
                    Placeholder="Enter fullname"
                    PlaceholderColor="#CCCCCC"
                    BackgroundColor="#FAFAFA"/>
            </VerticalStackLayout>

            <!-- Phone Number -->
            <VerticalStackLayout Spacing="5">
                <Label 
                    Text="phone number"
                    TextColor="#666666"
                    FontSize="14"/>
                <Frame 
                    Padding="0"
                    BorderColor="#FF4444"
                    HasShadow="False">
                    <Entry 
                        Text="Typing |"
                        TextColor="#666666"/>
                </Frame>
                <Label 
                    Text="Error message informing me of a problem"
                    TextColor="#FF4444"
                    FontSize="12"/>
            </VerticalStackLayout>

            <!-- Remember Me -->
            <HorizontalStackLayout Spacing="10">
                <CheckBox 
                    Color="#6750A4"/>
                <Label 
                    Text="Remember me"
                    VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <!-- Gender Selection -->
            <VerticalStackLayout Spacing="15">
                <RadioButton 
                    Content="female"
                    GroupName="gender"
                    TextColor="#666666"/>
                <RadioButton 
                    Content="male"
                    GroupName="gender"
                    IsChecked="True"
                    TextColor="#666666"/>
            </VerticalStackLayout>

            <!-- Buttons -->
            <Grid 
                ColumnDefinitions="*,*" 
                ColumnSpacing="10"
                VerticalOptions="EndAndExpand"
                Margin="0,40,0,0">
                
                <Button
                    Text="Cancel"
                    Grid.Column="0"
                    BackgroundColor="Transparent"
                    TextColor="#6750A4"
                    BorderColor="#6750A4"
                    BorderWidth="1"/>
                
                <Button
                    Text="Next"
                    Grid.Column="1"
                    BackgroundColor="#6750A4"
                    TextColor="White"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>