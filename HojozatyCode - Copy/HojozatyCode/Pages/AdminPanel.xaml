<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.AdminPanel"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="True"
             Title="Admin Panel">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid BackgroundColor="#2C3E50" Padding="15" RowDefinitions="Auto" ColumnDefinitions="*,Auto">
            <Label Text="Admin Panel" FontSize="26" TextColor="White" FontAttributes="Bold" VerticalOptions="Center" />
            <Button Text="Logout" BackgroundColor="#E74C3C" TextColor="White" CornerRadius="10" Padding="10,5" Grid.Column="1" />
        </Grid>

        <Grid RowDefinitions="*" ColumnDefinitions="220,*" Grid.Row="1">
            <!-- Sidebar Navigation -->
            <StackLayout BackgroundColor="#34495E" Padding="15" Grid.Column="0" Spacing="15">
                <Button Text="Dashboard" BackgroundColor="Transparent" TextColor="White" FontAttributes="Bold" />
                <Button Text="Reservations" BackgroundColor="Transparent" TextColor="White" FontAttributes="Bold" />
                <Button Text="Settings" BackgroundColor="Transparent" TextColor="White" FontAttributes="Bold" />
            </StackLayout>

            <!-- Main Content -->
            <StackLayout Padding="15" Grid.Column="1">
                <Label Text="Reservations" FontSize="22" FontAttributes="Bold" TextColor="#2C3E50" />
                <!-- Bind Reservations list here -->
                <CollectionView Margin="0,10,0,0">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="#BDC3C7" Padding="15" Margin="5" CornerRadius="10" BackgroundColor="White">
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                                    <!-- Bind CustomerName here -->
                                    <Label Text="Customer Name" FontSize="18" FontAttributes="Bold" TextColor="#2C3E50" Grid.ColumnSpan="2" />
                                    <!-- Bind RoomNumber here -->
                                    <Label Text="Room: X" TextColor="#7F8C8D" Grid.Row="1" />
                                    <!-- Bind CheckInDate here -->
                                    <Label Text="Check-in: MM/DD/YYYY" TextColor="#7F8C8D" Grid.Row="2" />
                                    <!-- Bind CheckOutDate here -->
                                    <Label Text="Check-out: MM/DD/YYYY" TextColor="#7F8C8D" Grid.Row="3" />
                                    <Button Text="View" BackgroundColor="#3498DB" TextColor="White" CornerRadius="8" Padding="8,4" Grid.Column="1" Grid.RowSpan="4" VerticalOptions="Center" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </Grid>
    </Grid>
</ContentPage>
