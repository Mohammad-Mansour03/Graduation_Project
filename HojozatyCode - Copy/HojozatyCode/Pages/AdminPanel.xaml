                                <Label Text="#RES-0251" 
                       Grid.Column="1"
                       TextColor="#7F8C8D"
                       FontSize="14" />
                                <Label Text="10 Nights" 
                       Grid.Column="2"
                       TextColor="#2C3E50"
                       FontSize="14" />
                                <Frame Grid.Column="3"
