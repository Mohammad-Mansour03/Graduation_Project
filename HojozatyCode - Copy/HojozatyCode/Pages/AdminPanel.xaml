               Grid.Column="2"
               FontAttributes="Bold"
               TextColor="#7F8C8D"
               FontSize="14" />
                        <Label Text="Status" 
               Grid.Column="3"
               FontAttributes="Bold"
               TextColor="#7F8C8D"
               FontSize="14" />

                        <!-- Row 1 -->
                        <Frame BackgroundColor="#F4F7FA"
               CornerRadius="10"
               Padding="10"
               Grid.Row="1"
               HasShadow="False">
                            <Grid ColumnDefinitions="*,120,100,100"
                  VerticalOptions="Center"
                  RowSpacing="0"
                  ColumnSpacing="10">
