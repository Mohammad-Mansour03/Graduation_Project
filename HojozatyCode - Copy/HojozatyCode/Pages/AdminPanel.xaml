                       Grid.Column="2"
                       TextColor="#2C3E50"
                       FontSize="14" />
                                <Frame Grid.Column="3"
                       BackgroundColor="#FEE2E2"
                       CornerRadius="12"
                       Padding="8,4">
                                    <Label Text="Pending" 
                           TextColor="#DC2626"
                           FontAttributes="Bold"
                           FontSize="12"
                           HorizontalOptions="Center"/>
                                </Frame>
                            </Grid>
                        </Frame>
                    </Grid>
                </Frame>
            </VerticalStackLayout>
