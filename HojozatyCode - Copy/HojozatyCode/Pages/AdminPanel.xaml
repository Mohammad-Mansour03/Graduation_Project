                            </Grid>
                        </Frame>

                        <!-- Row 3 -->
                        <Frame BackgroundColor="#F4F7FA"
               CornerRadius="10"
               Padding="10"
               Grid.Row="3"
               HasShadow="False">
                            <Grid ColumnDefinitions="*,120,100,100"
                  VerticalOptions="Center"
                  RowSpacing="0"
                  ColumnSpacing="10">
