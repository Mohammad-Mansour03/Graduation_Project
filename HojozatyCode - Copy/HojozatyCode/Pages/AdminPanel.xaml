                                <Label Text="12 new this week" 
                                       TextColor="#9B59B6"
                                       FontSize="12"/>
                            </VerticalStackLayout>
                        </Frame>
                    </HorizontalStackLayout>
                </ScrollView>

                <!-- Reservations Table -->
                <Frame BackgroundColor="White"
       CornerRadius="15"
       HasShadow="True"
       Padding="0">
                    <Grid Padding="15"
          ColumnDefinitions="*,120,100,100"
          RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
