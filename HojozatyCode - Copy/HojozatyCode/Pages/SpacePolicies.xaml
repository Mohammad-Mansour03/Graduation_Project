<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:HojozatyCode.ViewModels"
             x:Class="HojozatyCode.Pages.SpacePolicies"
             Title="SpacePolicies">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Header -->
            <Label Text="What are your Policies?"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="Black"/>

            <!-- Payment Policy Section -->
            <Label Text="Payment Policy"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,10,0,0"/>

            
                <Grid ColumnDefinitions="*,Auto">
                <Border Stroke="Black" StrokeShape="RoundRectangle 8" HeightRequest="50">
                    <Entry Text="Visa/Mastercard" IsReadOnly="True" Margin="5"/>
                    </Border>
                <CheckBox x:Name="VisaMasterCardCheckBox" Grid.Column="1" VerticalOptions="Center"/>
                </Grid>


            <Grid ColumnDefinitions="*,Auto">
                <Border Stroke="Black" StrokeShape="RoundRectangle 8" HeightRequest="50" >
                    <Entry Text="Cash" IsReadOnly="True" Margin="5"/>
                </Border>
                <CheckBox x:Name="CashCheckBox" Grid.Column="1" VerticalOptions="Center"/>
            </Grid>

            <!-- Cancellation Policy Section -->
            <Label Text="Cancellation Policy"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,10,0,0"/>



            <Grid ColumnDefinitions="*,Auto">
                <Border Stroke="Black" StrokeShape="RoundRectangle 8" HeightRequest="50">
                    <Entry Text="Flexible" IsReadOnly="True" Margin="5"/>
                </Border>
                <CheckBox x:Name="FlexibleCheckBox" Grid.Column="1" VerticalOptions="Center"/>
            </Grid>


            <Grid ColumnDefinitions="*,Auto">
                <Border Stroke="Black" StrokeShape="RoundRectangle 8" HeightRequest="50">
                    <Entry Text="Moderate" IsReadOnly="True" Margin="5"/>
                </Border>
                <CheckBox x:Name="ModerateCheckBox" Grid.Column="1" VerticalOptions="Center"/>
            </Grid>


            <Grid ColumnDefinitions="*,Auto">
                <Border Stroke="Black" StrokeShape="RoundRectangle 8" HeightRequest="50">
                    <Entry Text="Strict" IsReadOnly="True" Margin="5"/>
                </Border>
                <CheckBox  x:Name="StrictCheckBox" Grid.Column="1" VerticalOptions="Center"/>
            </Grid>

            <!-- House Rules Section -->
            <Label Text="House Rules"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="Black"
                   Margin="0,10,0,0"/>


            <Grid ColumnDefinitions="*,Auto">
                <Border Stroke="Black" StrokeShape="RoundRectangle 8" HeightRequest="50">
                    <Entry Text="No Smoking" IsReadOnly="True" Margin="5"/>
                </Border>
                <CheckBox x:Name="NoSmokingCheckBox" Grid.Column="1" VerticalOptions="Center"/>
            </Grid>


            <Grid ColumnDefinitions="*,Auto">
                <Border Stroke="Black" StrokeShape="RoundRectangle 8" HeightRequest="50">
                    <Entry Text="No Pets" IsReadOnly="True" Margin="5"/>
                </Border>
                <CheckBox x:Name="NoPetsCheckBox" Grid.Column="1" VerticalOptions="Center"/>
            </Grid>



            <Grid ColumnDefinitions="*,Auto">
                <Border Stroke="Black" StrokeShape="RoundRectangle 8" HeightRequest="50">
        <Entry Text="Maximum Capacity" IsReadOnly="True" Margin="5"/>
            </Border>
    <Entry x:Name="MaximumCapacityInput" Grid.Column="1" VerticalOptions="Center" Placeholder="Input" Text="{Binding Capacity}"/>
            </Grid>

            <!-- Review Button -->
            <Grid Margin="0,20,0,0">
                <Button Text="Review"
                        BackgroundColor="Purple"
                        TextColor="White"
                        FontSize="22"
                        CornerRadius="25"
                        WidthRequest="120"
                        HeightRequest="50"
                        HorizontalOptions="End"
                        Command="{Binding NavigateToReviewPageCommand}"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>