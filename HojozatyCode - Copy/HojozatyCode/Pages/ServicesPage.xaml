<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:HojozatyCode.ViewModels"
             xmlns:converters="clr-namespace:HojozatyCode.Converters"
             x:Class="HojozatyCode.Pages.ServicesPage"
             Shell.TabBarIsVisible="False"
             x:DataType="viewModels:AddSpaceViewModel"
             BackgroundColor="#F8F7FC">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="0">
            <!-- Header -->
            <Label Text="Add Your Services"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#1A1C2A"
                   Margin="0,0,0,20" />

            <!-- Add Service Section -->
            <Label Text="Add New Service"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#1A1C2A"
                   Margin="0,24,0,12" />

            <!-- Input Fields Row -->
            <Grid ColumnDefinitions="*,120"
                  ColumnSpacing="12"
                  Margin="0,0,0,16">
                <!-- Service Name -->
                <Border Stroke="#E1E0E9"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 12"
                        BackgroundColor="#FFFFFF"
                        HeightRequest="56"
                        Padding="16,0"
                        Grid.Column="0">
                    <Entry Placeholder="Service name"
                           FontSize="16"
                           TextColor="#1A1C2A"
                           PlaceholderColor="#6B6D7C"
                           BackgroundColor="Transparent"
                           VerticalOptions="Center"
                           Text="{Binding NewServiceName}" />
                </Border>

                <!-- Price -->
                <Border Stroke="#E1E0E9"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 12"
                        BackgroundColor="#FFFFFF"
                        HeightRequest="56"
                        Padding="16,0"
                        Grid.Column="1">
                    <Entry Placeholder="Price"
                           FontSize="16"
                           TextColor="#1A1C2A"
                           PlaceholderColor="#6B6D7C"
                           BackgroundColor="Transparent"
                           VerticalOptions="Center"
                           Keyboard="Numeric"
                           HorizontalTextAlignment="End"
                           Text="{Binding NewServicePrice}" />
                </Border>
            </Grid>

            <!-- Add Button -->
            <Button Text="Add Service"
                    BackgroundColor="#4F378A"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="50"
                    Padding="24,0"
                    Command="{Binding AddServiceCommand}" />

            <!-- Services List Section -->
            <Label Text="Your Services"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#1A1C2A"
                   Margin="0,24,0,12"
                   IsVisible="{Binding Services.Count, Converter={StaticResource StringNotEmptyConverter}}" />

            <CollectionView ItemsSource="{Binding Services}"
                            EmptyView="No services added yet"
                            Margin="0,12,0,0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#FFFFFF"
                               BorderColor="#E1E0E9"
                               CornerRadius="12"
                               Padding="16"
                               Margin="0,0,0,12"
                               HasShadow="True">
                            <Grid ColumnDefinitions="*,Auto,Auto"
                                  ColumnSpacing="-20">
                                <!-- Service Name -->
                                <Label Text="{Binding Name}"
                                       FontSize="16"
                                       TextColor="#1A1C2A"
                                       VerticalOptions="Center" />

                                <!-- Service Price -->
                                <Label Text="{Binding Price, StringFormat='{0} JOD'}"
                                       Grid.Column="1"
                                       FontSize="16"
                                       TextColor="#4F378A"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center" />

                                <!-- Delete Button -->
                                <ImageButton Grid.Column="2"
                                             Source="delete_outline.png"
                                             BackgroundColor="Transparent"
                                             WidthRequest="24"
                                             HeightRequest="24"
                                             Padding="0"
                                             Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:AddSpaceViewModel}}, Path=DeleteServiceCommand}"
                                             CommandParameter="{Binding .}" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Continue Button -->
            <Button Text="Continue"
                    BackgroundColor="#4F378A"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    HeightRequest="50"
                    Padding="24,0"
                    Margin="0,32"
                    Command="{Binding NavigateToSpacePoliciesPageCommand}" />

            <!-- Error Message -->
            <Label Text="{Binding ErrorMessage}"
                   FontSize="14"
                   TextColor="#E53935"
                   HorizontalOptions="Center"
                   Margin="0,16"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>