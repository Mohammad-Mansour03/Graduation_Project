<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:HojozatyCode.ViewModels"
             x:Class="HojozatyCode.Pages.FiltersPage"
             x:DataType="viewModels:HomeViewModel"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="True"
             Title="FiltersPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Price Range -->
            <Label Text="Price Range" FontSize="18" FontAttributes="Bold" />
            <Slider x:Name="PriceSlider" Minimum="0" Maximum="5000" Value="2500" ThumbColor="Purple" MinimumTrackColor="Purple" />
            <Grid ColumnDefinitions="Auto, Auto" HorizontalOptions="Fill">
                <Label Text="0 JD" FontSize="14" VerticalOptions="Center"/>
                <Label Text="5000 JD" FontSize="14" HorizontalOptions="EndAndExpand" VerticalOptions="Center"/>
            </Grid>

            <!-- Instant Book -->
            <Frame CornerRadius="10" Padding="15" BackgroundColor="#F5F5F5">
                <VerticalStackLayout Spacing="5">
                    <HorizontalStackLayout Spacing="10">
                        <Label Text="Instant Book" FontSize="16" VerticalOptions="Center"/>
                        <Switch x:Name="InstantBookSwitch" IsToggled="false" OnColor="Purple"/>
                    </HorizontalStackLayout>
                    <Label Text="Only see spaces that can be instantly booked" FontSize="12" TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>

            <!-- Attendees -->
            <Label Text="Attendees" FontSize="18" FontAttributes="Bold" />
            <VerticalStackLayout Spacing="5">
                <RadioButton GroupName="Attendees" Content="Any amount" IsChecked="True"/>
                <RadioButton GroupName="Attendees" Content="50 - 100"/>
                <RadioButton GroupName="Attendees" Content="100 - 200"/>
            </VerticalStackLayout>

            <!-- Space Type -->
            <Label Text="Space Type" FontSize="18" FontAttributes="Bold" />
            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto, Auto" ColumnSpacing="10" RowSpacing="10">
                <CheckBox x:Name="HallsCheckBox"/>
                <Label Text="Halls" VerticalOptions="Center"/>
                <CheckBox x:Name="FarmsCheckBox" Grid.Row="1"/>
                <Label Text="Farms" VerticalOptions="Center" Grid.Row="1"/>
                <CheckBox x:Name="HotelsCheckBox" Grid.Row="2"/>
                <Label Text="Hotels" VerticalOptions="Center" Grid.Row="2"/>
                <CheckBox x:Name="OpenPlacesCheckBox" Grid.Row="3"/>
                <Label Text="Open Places" VerticalOptions="Center" Grid.Row="3"/>
            </Grid>

            <!-- Buttons -->
            <HorizontalStackLayout Spacing="10" VerticalOptions="End" Margin="20,10">
                <Button Text="Clear All" BackgroundColor="Transparent" TextColor="Black" BorderColor="Gray" BorderWidth="1" CornerRadius="10" Padding="10"/>
                <Button Text="View 4 Spaces" BackgroundColor="Purple" TextColor="White" CornerRadius="10" Padding="10" WidthRequest="150"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
