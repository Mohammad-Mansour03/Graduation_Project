<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:HojozatyCode.ViewModels"
             x:Class="HojozatyCode.Pages.FiltersPage"
             x:DataType="viewModels:HomeViewModel"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="True"
             Title="FiltersPage">
    <VerticalStackLayout Padding="20">

        <!-- Price Range -->
        <Label Text="Price Range" FontSize="16" />
        <Slider x:Name="PriceSlider" Minimum="0" Maximum="5000" Value="2500" />
        <HorizontalStackLayout>
            <Label Text="0JD" />
            <Label Text="5000JD" HorizontalOptions="EndAndExpand" />
        </HorizontalStackLayout>

        <!-- Instant Book -->
        <HorizontalStackLayout VerticalOptions="Center">
            <Label Text="Instant book" FontSize="16"/>
            <Switch x:Name="InstantBookSwitch" IsToggled="false"/>
        </HorizontalStackLayout>
        <Label Text="Only see spaces that can be instantly booked"
               FontSize="12" TextColor="Gray"/>

        <!-- Attendees -->
        <Label Text="Attendees" FontSize="16" />
        <RadioButton GroupName="Attendees" Content="Any amount" IsChecked="True"/>
        <RadioButton GroupName="Attendees" Content="50 - 100"/>
        <RadioButton GroupName="Attendees" Content="100 - 200"/>

        <!-- Space Type -->
        <Label Text="Space type" FontSize="16" />
        <CheckBox x:Name="HallsCheckBox"/>
        <Label Text="Halls" VerticalOptions="Center"/>
        <CheckBox x:Name="FarmsCheckBox"/>
        <Label Text="Farms" VerticalOptions="Center"/>
        <CheckBox x:Name="HotelsCheckBox"/>
        <Label Text="Hotels" VerticalOptions="Center"/>
        <CheckBox x:Name="OpenPlacesCheckBox"/>
        <Label Text="Open Places" VerticalOptions="Center"/>

        <!-- Buttons -->
        <Button Text="Clear all" BackgroundColor="Transparent" TextColor="Black"/>
        <Button Text="View 4 Spaces" BackgroundColor="Purple" TextColor="White"/>

    </VerticalStackLayout>
</ContentPage>
