<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.BookingCalendarPage"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#F9F6FC">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Label Text="Choose a Time Slot"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black" />

            <Label Text="Pick a date and start/end time"
                   FontSize="14"
                   HorizontalOptions="Center"
                   TextColor="#7F8C8D" />

            <!-- Date Picker -->
            <Frame CornerRadius="14" Padding="15" HasShadow="True"
                   BackgroundColor="#FFFFFF">
                <Grid ColumnDefinitions="30,*" ColumnSpacing="15">
                    <Image Source="calenadar.png"
                           HeightRequest="24"
                           WidthRequest="24"
                           VerticalOptions="Center" />
                    <VerticalStackLayout Grid.Column="1" Spacing="5">
                        <Label Text="Date"
                               FontSize="12"
                               TextColor="#7F8C8D" />
                        <DatePicker Date="{Binding SelectedDate}"
                                    Format="D"
                                    FontSize="16"
                                    TextColor="#2C3E50" />
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <!-- Start Time Picker -->
            <Frame CornerRadius="14" Padding="15" HasShadow="True"
                   BackgroundColor="#FFFFFF">
                <Grid ColumnDefinitions="30,*" ColumnSpacing="15">
                    <Image Source="clock.png"
                           HeightRequest="24"
                           WidthRequest="24"
                           VerticalOptions="Center" />
                    <VerticalStackLayout Grid.Column="1" Spacing="5">
                        <Label Text="Start Time"
                               FontSize="12"
                               TextColor="#7F8C8D" />
                        <TimePicker Time="{Binding SelectedTime}"
                                    FontSize="16"
                                    TextColor="#2C3E50" />
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <!-- End Time Picker -->
            <Frame CornerRadius="14" Padding="15" HasShadow="True"
                   BackgroundColor="#FFFFFF"
                   IsVisible="{Binding HasFixedTime}">
                <Grid ColumnDefinitions="30,*" ColumnSpacing="15">
                    <Image Source="clock.png"
                           HeightRequest="24"
                           WidthRequest="24"
                           VerticalOptions="Center" />
                    <VerticalStackLayout Grid.Column="1" Spacing="5">
                        <Label Text="End Time"
                               FontSize="12"
                               TextColor="#7F8C8D" />
                        <TimePicker Time="{Binding EndedTime}"
                                    FontSize="16"
                                    TextColor="#2C3E50" />
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <!-- Check Availability Button -->
            <Border BackgroundColor="#4F378A" StrokeShape="RoundRectangle 10">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CheckAvailabilityCommand}" />
                </Border.GestureRecognizers>
                <Grid Padding="10">
                    <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                        <Label Text="Check Availability"
                               FontSize="16"
                               TextColor="White"
                               FontAttributes="Bold" />
                    </HorizontalStackLayout>
                </Grid>
            </Border>

            <!-- Confirm Booking Button -->
            <Border BackgroundColor="#4F378A" StrokeShape="RoundRectangle 10">
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding CreateBookingCommand}" />
                </Border.GestureRecognizers>
                <Grid Padding="10">
                    <HorizontalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="10">
                        <Image Source="approve.png"
                               HeightRequest="20"
                               WidthRequest="20" />
                        <Label Text="Confirm Booking"
                               FontSize="16"
                               TextColor="White"
                               FontAttributes="Bold" />
                    </HorizontalStackLayout>
                </Grid>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
