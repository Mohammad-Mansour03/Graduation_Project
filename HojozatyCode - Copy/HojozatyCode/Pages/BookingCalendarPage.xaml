<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.BookingCalendarPage"
             Title="BookingCalendarPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Date Picker -->
            <DatePicker 
                Date="{Binding SelectedDateTime, Mode=TwoWay}" 
                Format="D" />

            <!-- Time Picker -->
            <TimePicker 
                Time="{Binding SelectedDateTime, Mode=TwoWay}" />

            <!-- Button to Check Availability -->
            <Button 
                Text="Check Availability" 
                Command="{Binding CheckAvailabilityCommand}" />

            <!-- Label to Show Result -->
            <Label 
                x:Name="AvailabilityLabel" 
                FontSize="18"
                HorizontalOptions="Center" />

            <!-- Button to Book -->
            <Button 
                Text="Book Now"
                Command="{Binding CreateBookingCommand}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>