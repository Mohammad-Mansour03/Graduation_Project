<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HojozatyCode.ViewModels"
             x:Class="HojozatyCode.Pages.ReviewBooking"
             Title="Review Booking"
            >

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Venue Information -->
            <Frame BorderColor="LightGray" CornerRadius="10" Padding="15">
                <VerticalStackLayout Spacing="8">
                    <Label Text="{Binding SelectedVenue.VenueName}"
                           FontSize="18"
                           FontAttributes="Bold"/>

                    <Label Text="{Binding SelectedVenue.Location}"
                           FontSize="14"
                           TextColor="Gray"/>

                    <Label Text="{Binding SelectedVenue.VenueContactPhone}"
                           FontSize="14"
                           TextColor="Gray"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Booking Time Details -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" Padding="10">
                <Label Text="Start Time:"
                       Grid.Row="0" Grid.Column="0"
                       FontAttributes="Bold"/>
                <Label Text="{Binding SelectedDateTime , Mode=TwoWay}"
                       Grid.Row="0" Grid.Column="1"
                       HorizontalOptions="End"
                       />      
             

            </Grid>    
            
            <!-- Booking Time Details -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" Padding="10">
                <Label Text="Start Time:"
                       Grid.Row="0" Grid.Column="0"
                       FontAttributes="Bold"/>
                <Label Text="{Binding EndedDateTime , Mode=TwoWay}"
                       Grid.Row="0" Grid.Column="1"
                       HorizontalOptions="End"
                       />      
             

            </Grid>      
            <!-- Booking Time Details -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" Padding="10">
                <Label Text="Total Price"
                       Grid.Row="0" Grid.Column="0"
                       FontAttributes="Bold"/>
                <Label Text="{Binding TotalPrice , Mode=TwoWay}"
                       Grid.Row="0" Grid.Column="1"
                       HorizontalOptions="End"
                       />      
             

            </Grid>
            <Button
                Command="{Binding ShowTimeCommand}"
                />

            <CollectionView ItemsSource="{Binding BookingServices}">

                <CollectionView.ItemTemplate>

                    <DataTemplate>

                        <!-- Outer Border for a Unified Look -->
                        <Border Stroke="Gray"
                       StrokeThickness="1"
                       StrokeShape="RoundRectangle 20"
                       Padding="10"
                       Margin="5"
                       BackgroundColor="Transparent"
                       HorizontalOptions="FillAndExpand">

                            <Grid ColumnDefinitions="*,Auto,Auto" 
                         ColumnSpacing="10">

                                <!-- Name Entry -->
                                <Entry Grid.Column="0"
                              Text="{Binding Name}"
                              IsReadOnly="True"
                              FontSize="16"
                              TextColor="Black"
                              Margin="5"
                              HorizontalOptions="FillAndExpand"/>

                         
                          
                                <!-- Price Entry -->
                                <Entry Grid.Column="1"
                              Text="{Binding TotalPrice}"
                              IsReadOnly="True"
                              FontSize="16"
                              TextColor="Black"
                              Margin="5"
                              WidthRequest="60"
                              HorizontalTextAlignment="Center"/>

            
                            </Grid>

                        </Border>

                    </DataTemplate>

                </CollectionView.ItemTemplate>

            </CollectionView>
            
            <!-- Rest of your XAML remains the same -->
            <Button Text="Pay with Card (Demo)"
                    BackgroundColor="#635BFF"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="48"
                    Clicked="OnPayWithCardClicked"
                    Margin="0,20,0,0"/>
        </VerticalStackLayout>
        
        
    </ScrollView>
</ContentPage>