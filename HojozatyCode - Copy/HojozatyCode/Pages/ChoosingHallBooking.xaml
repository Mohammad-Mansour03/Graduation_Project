<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HojozatyCode.ViewModels"
             x:Class="HojozatyCode.Pages.ChoosingHallBooking"
             Title="Venue Details"
             BackgroundColor="#F8F9FA">

    <ContentPage.Resources>
        <!-- Reusable Styles -->
        <Style TargetType="Label" x:Key="SectionHeader">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontFamily" Value="Montserrat-SemiBold"/>
            <Setter Property="TextColor" Value="#2D3748"/>
        </Style>
        <Style TargetType="Button" x:Key="IconButton">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="WidthRequest" Value="44"/>
            <Setter Property="HeightRequest" Value="44"/>
            <Setter Property="CornerRadius" Value="22"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="ZIndex" Value="1"/>
        </Style>
    </ContentPage.Resources>

    <ContentPage.BindingContext>
        <vm:BookingViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Hero Image with Gradient Overlay -->
        <Grid Grid.Row="0" HeightRequest="280">
            <Image Source="{Binding SelectedVenue.ImageUrl}"
                   Aspect="AspectFill"
                   VerticalOptions="Fill"
                   HorizontalOptions="Fill"/>

            <BoxView>
                <BoxView.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="Transparent" Offset="0.6"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>

            <!-- Back Button -->
            <Button Style="{StaticResource IconButton}"
                    ImageSource="back_arrow.png"
                    HorizontalOptions="Start"
                    VerticalOptions="Start">
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="Opacity" Value="0.6"/>
                    </Trigger>
                </Button.Triggers>
            </Button>

            <!-- Favorite Button -->
            <Button Style="{StaticResource IconButton}"
                    ImageSource="heart_outline.png"
                    HorizontalOptions="End"
                    VerticalOptions="Start">
                <Button.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="Opacity" Value="0.6"/>
                    </Trigger>
                </Button.Triggers>
            </Button>
        </Grid>

        <!-- Main Content Area -->
        <Border Grid.Row="1"
                Margin="0,-30,0,0"
                Stroke="Transparent"
                BackgroundColor="White"
                StrokeShape="RoundRectangle 30">
            <Border.Shadow>
                <Shadow Brush="#000000" Offset="0,4" Opacity="0.1" Radius="8"/>
            </Border.Shadow>

            <ScrollView>
                <VerticalStackLayout Spacing="24" Padding="24">

                    <!-- Title -->
                    <Label Text="{Binding SelectedVenue.VenueName}"
                           FontSize="30"
                           FontFamily="Montserrat-SemiBold"
                           TextColor="#1A202C"
                           LineBreakMode="TailTruncation"
                           MaxLines="1"/>

                    <!-- Info Card -->
                    <Border BackgroundColor="#EDF2F7"
                            Padding="16"
                            StrokeThickness="0"
                            StrokeShape="RoundRectangle 16">
                        <VerticalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="8">
                                <Image Source="location.png"
                                       HeightRequest="18"
                                       WidthRequest="18"/>
                                <Label Text="Amman, Jordan"
                                       FontSize="14"
                                       FontFamily="Montserrat-Medium"
                                       TextColor="#4A5568"/>
                            </HorizontalStackLayout>

                            <BoxView HeightRequest="1" Color="#CBD5E0" Margin="0,8"/>

                            <Grid ColumnDefinitions="*,*">
                                <VerticalStackLayout>
                                    <Label Text="TYPE"
                                           FontSize="12"
                                           TextColor="#718096"
                                           FontFamily="Montserrat-SemiBold"/>
                                    <Label Text="{Binding SelectedVenue.Type}"
                                           FontSize="14"
                                           FontFamily="Montserrat-Medium"
                                           TextColor="#2D3748"/>
                                </VerticalStackLayout>

                                <VerticalStackLayout Grid.Column="1">
                                    <Label Text="CAPACITY"
                                           FontSize="12"
                                           TextColor="#718096"
                                           FontFamily="Montserrat-SemiBold"/>
                                    <Label Text="{Binding SelectedVenue.Capacity}"
                                           FontSize="14"
                                           FontFamily="Montserrat-Medium"
                                           TextColor="#2D3748"/>
                                </VerticalStackLayout>
                            </Grid>
                        </VerticalStackLayout>
                    </Border>

                    <!-- Features -->
                    <VerticalStackLayout Spacing="12">
                        <FlexLayout Wrap="Wrap" JustifyContent="Start" BindableLayout.ItemsSource="{Binding VenueFeatures}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate>
                                    <Border BackgroundColor="#F8FAFC"
                                            Padding="12,8"
                                            Margin="0,0,10,10"
                                            StrokeThickness="0"
                                            StrokeShape="RoundRectangle 12">
                                        <HorizontalStackLayout Spacing="8">
                                            <Image Source="{Binding Icon}"
                                                   HeightRequest="18"
                                                   WidthRequest="18"/>
                                            <Label Text="{Binding Value}"
                                                   FontSize="14"
                                                   TextColor="#4A5568"
                                                   FontFamily="Montserrat-Medium"/>
                                        </HorizontalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </FlexLayout>
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" Color="#E2E8F0" Margin="0,10"/>

                    <!-- About Section -->
                    <VerticalStackLayout Spacing="12">
                        <Label Text="About This Venue" Style="{StaticResource SectionHeader}"/>
                        <Label Text="{Binding SelectedVenue.Description}"
                               FontSize="14"
                               TextColor="#4A5568"
                               FontFamily="Montserrat-Regular"
                               LineHeight="1.6"/>
                    </VerticalStackLayout>

                    <!-- Host Rules -->
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Host Rules" Style="{StaticResource SectionHeader}"/>
                        <CollectionView ItemsSource="{Binding HostRulesVenue}"
                                        IsVisible="{Binding HasHostRules}"
                                      SelectionMode="None"
                                      Margin="-10,0">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border BackgroundColor="#F8FAFC"
                                            Padding="16"
                                            Margin="0,0,0,10"
                                            StrokeThickness="0"
                                            StrokeShape="RoundRectangle 12">
                                        <Grid ColumnDefinitions="24,*" ColumnSpacing="10">
                                            <Image Source="rule_icon.png"
                                                   HeightRequest="20"
                                                   WidthRequest="20"
                                                   VerticalOptions="Center"/>
                                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                                <Label Text="{Binding HostRuleName}"
                                                       FontSize="14"
                                                       FontFamily="Montserrat-SemiBold"
                                                       TextColor="#2D3748"/>
                                                <Label Text="{Binding HostRuleDescription}"
                                                       FontSize="13"
                                                       FontFamily="Montserrat-Regular"
                                                       TextColor="#4A5568"/>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <Label Text="There Is No Host Rules Avaliable"
                   FontSize="16"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   IsVisible="{Binding NoHostRules}"
                   Grid.Row="1" />
                    </VerticalStackLayout>

                    <!-- Services -->
                    <VerticalStackLayout Spacing="12">
                        <Label Text="Services" Style="{StaticResource SectionHeader}"/>
                        <CollectionView ItemsSource="{Binding ServicesVenue}"
                                        IsVisible="{Binding HasServices}"
                                      SelectionMode="None"
                                      Margin="-10,0">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border BackgroundColor="#F8FAFC"
                                            Padding="16"
                                            Margin="0,0,0,10"
                                            StrokeThickness="0"
                                            StrokeShape="RoundRectangle 12">
                                        <Grid ColumnDefinitions="24,*" ColumnSpacing="10">
                                            <Image Source="service_icon.png"
                                                   HeightRequest="20"
                                                   WidthRequest="20"
                                                   VerticalOptions="Center"/>
                                            <VerticalStackLayout Grid.Column="1" Spacing="4">
                                                <Label Text="{Binding Name}"
                                                       FontSize="14"
                                                       FontFamily="Montserrat-SemiBold"
                                                       TextColor="#2D3748"/>
                                                <Label Text="{Binding Description}"
                                                       FontSize="13"
                                                       FontFamily="Montserrat-Regular"
                                                       TextColor="#4A5568"/>  
                                                
                                                <Label Text="{Binding Price}"
                                                       FontSize="13"
                                                       FontFamily="Montserrat-Regular"
                                                       TextColor="#4A5568"/>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <Label Text="There Is No Services Avaliable"
                                FontSize="16"
                                TextColor="Gray"
                                HorizontalOptions="Center"
                                VerticalOptions="Center"
                                IsVisible="{Binding NoHostRules}"
                                Grid.Row="1" />

                    </VerticalStackLayout>

                </VerticalStackLayout>
            </ScrollView>
        </Border>

        <!-- Footer Booking Bar -->
        <Grid Grid.Row="2"
              Padding="20,15"
              BackgroundColor="White"
              ColumnDefinitions="*,Auto"
              ColumnSpacing="15">

            <VerticalStackLayout VerticalOptions="Center">
                <Label Text="Starting from"
                       FontSize="12"
                       TextColor="#718096"
                       FontFamily="Montserrat-Medium"/>
                <Label Text="{Binding SelectedVenue.InitialPrice, StringFormat='{0} JOD/hour'}"
                       FontSize="18"
                       FontFamily="Montserrat-SemiBold"
                       TextColor="#4F378A"/>
            </VerticalStackLayout>

            <Button Text="Book Now"
                    Grid.Column="1"
                    BackgroundColor="#4F378A"
                    TextColor="White"
                    FontFamily="Montserrat-SemiBold"
                    CornerRadius="12"
                    HeightRequest="50"
                    WidthRequest="160"
                    VerticalOptions="Center">
                <Button.Shadow>
                    <Shadow Brush="#4F378A" Offset="0,4" Opacity="0.2" Radius="8"/>
                </Button.Shadow>
            </Button>
        </Grid>
    </Grid>
</ContentPage>