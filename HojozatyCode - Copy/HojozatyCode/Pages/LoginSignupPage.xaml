<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             Title="LoginSignupPage"
             x:Class="HojozatyCode.Pages.LoginSignupPage"
             xmlns:viewModels="clr-namespace:HojozatyCode.ViewModels"
             x:DataType="viewModels:LoginSignupViewModel"
             BackgroundColor="White">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#EFEAFF" Offset="0.0" />
            <GradientStop Color="#FFFFFF" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="CornerRadius" Value="30"/>
            <Setter Property="Padding" Value="20,0"/>
        </Style>
    </ContentPage.Resources>

    <Grid>
        <VerticalStackLayout x:Name="MainStack"
                             VerticalOptions="Center"
                             HorizontalOptions="Center"
                             Spacing="35"
                             Padding="30,0">

            <!-- Logo -->
            <Image x:Name="LogoImage"
                   Source="https://i.ibb.co/gdtWZHz/h3.png"
                   HeightRequest="400"
                   WidthRequest="400"
                   HorizontalOptions="Center"
                   Opacity="0"
                   Scale="0.8"/>

            <!-- Subtitle -->
            <Label x:Name="SubtitleLabel"
                   Text="The Future of Reservations"
                   FontSize="20"
                   FontFamily="Montserrat"
                   TextColor="#4F378A"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   Opacity="0"/>

            <!-- Buttons -->
            <VerticalStackLayout x:Name="ButtonStack"
                                 Spacing="20"
                                 Opacity="0"
                                 Scale="0.95">

                <Button Text="Sign up"
                        BackgroundColor="#4F378A"
                        TextColor="White"
                        Shadow="None"
                        Command="{Binding SignUpCommand}"/>

                <Button Text="Login"
                        BackgroundColor="Transparent"
                        TextColor="#4F378A"
                        BorderColor="#4F378A"
                        BorderWidth="1.5"
                        Shadow="None"
                        Command="{Binding LogInCommand}"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
