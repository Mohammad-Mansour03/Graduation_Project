<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             Title="LoginSignupPage"
             x:Class="HojozatyCode.Pages.LoginSignupPage"
             xmlns:viewModels="clr-namespace:HojozatyCode.ViewModels"
             x:DataType="viewModels:LoginSignupViewModel"
             BackgroundColor="White">

    <ContentPage.Background>
        <!-- Soft gradient background -->
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#EFEAFF" Offset="0.0" />
            <GradientStop Color="#FFFFFF" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Resources>
        <Style TargetType="Button">
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="CornerRadius" Value="30"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="Shadow">
                <Shadow Brush="#00000030" Offset="3,3" Radius="8"/>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <Grid>
        <ScrollView>
            <VerticalStackLayout Spacing="35"
                                 Padding="30,80"
                                 x:Name="MainStack"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center">

                <!-- Logo -->
                <Image x:Name="LogoImage"
                       Source="https://i.ibb.co/gdtWZHz/h3.png"
                       HeightRequest="120"
                       WidthRequest="120"
                       HorizontalOptions="Center"
                       Opacity="0"
                       Scale="0.8" />

                <!-- Subtitle -->
                <Label x:Name="SubtitleLabel"
                       Text="The Future of Reservations"
                       FontSize="22"
                       FontFamily="Montserrat"
                       TextColor="#4F378A"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       Opacity="0"/>

                <!-- Buttons -->
                <VerticalStackLayout Spacing="20"
                                     Padding="0,50,0,0"
                                     x:Name="ButtonStack"
                                     Opacity="0"
                                     Scale="0.95">

                    <Button Text="Sign up"
                            BackgroundColor="#4F378A"
                            TextColor="White"
                            Command="{Binding SignUpCommand}" />

                    <Button Text="Login"
                            BackgroundColor="Transparent"
                            TextColor="#4F378A"
                            BorderColor="#4F378A"
                            BorderWidth="1.5"
                            Command="{Binding LogInCommand}" />
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
