<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:HojozatyCode.ViewModels"
             x:Class="HojozatyCode.Pages.LogInPage"
             x:DataType="viewModels:LogInViewModel"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#F9F6FC">

    <ContentPage.Resources>
        <Style TargetType="Entry">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="PlaceholderColor" Value="#888"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="CornerRadius" Value="25"/>
            <Setter Property="HeightRequest" Value="50"/>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, *"
          ColumnDefinitions="20, *, 20">

        <!-- Back Icon -->
        <ImageButton x:Name="BackButton"
                     Source="back_icon.png"
                     Grid.Row="0" Grid.Column="0"
                     HorizontalOptions="Start"
                     VerticalOptions="Start"
                     BackgroundColor="Transparent"
                     Padding="5"
                     Margin="10"
                     WidthRequest="40"
                     HeightRequest="90"
                     Command="{Binding ReturnToThePreviousCommand}"/>

        <!-- Title -->
        <Label Text="LOGIN"
               Grid.Row="1" Grid.Column="1"
               FontSize="32"
               FontAttributes="Bold"
               FontFamily="Montserrat"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               TextColor="#2D0C57"
               Margin="0,10"/>

        <!-- Form Fields -->
        <StackLayout Grid.Row="2" Grid.Column="1" Spacing="20">

            <!-- Email -->
            <Frame BackgroundColor="White"
                   CornerRadius="20"
                   HasShadow="True"
                   Padding="10"
                   HeightRequest="70">
                <Entry Placeholder="Email"
                       Text="{Binding EmailL}" />
            </Frame>

            <!-- Password -->
            <Frame BackgroundColor="White"
                   CornerRadius="20"
                   HasShadow="True"
                   Padding="10"
                   HeightRequest="70">
                <Grid ColumnDefinitions="*,Auto">
                    <Entry x:Name="PasswordEntry"
                           Placeholder="Password"
                           IsPassword="{Binding IsHiddenPassword, Mode=TwoWay}"
                           Text="{Binding PasswordL}" />
                    <ImageButton Source="{Binding EyeIconSource}"
                                 WidthRequest="24"
                                 HeightRequest="24"
                                 BackgroundColor="Transparent"
                                 Grid.Column="1"
                                 Command="{Binding TogglePasswordVisibilityCommand}" />
                </Grid>
            </Frame>

            <!-- Forgot Password -->
            <Button Text="Forgot Password?"
                    FontSize="14"
                    BackgroundColor="Transparent"
                    TextColor="#4F378A"
                    HorizontalOptions="End"
                    Command="{Binding ForgotPasswordCommand}" />

            <!-- Error -->
            <Label Text="{Binding ErrorMessage}"
                   FontSize="14"
                   TextColor="Red"
                   HorizontalOptions="Center"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"/>

            <!-- Login -->
            <Button Text="Log in"
                    BackgroundColor="#4F378A"
                    TextColor="White"
                    Command="{Binding LogInCommand}"
                    Margin="0,10"/>
        </StackLayout>

        <!-- Divider -->
        <StackLayout Grid.Row="3" Grid.Column="1" Margin="50,20" Spacing="10">
            <BoxView HeightRequest="1"
                     BackgroundColor="#CCC"
                     HorizontalOptions="Fill"/>
            <Label Text="Or"
                   FontSize="14"
                   TextColor="#555"
                   HorizontalOptions="Center"/>
        </StackLayout>

        <!-- Sign Up -->
        <StackLayout Grid.Row="4" Grid.Column="1"
                     HorizontalOptions="Center"
                     VerticalOptions="Center">
            <Label Text="Don't have an account?"
                   FontSize="14"
                   TextColor="#49454F"/>
            <Button Text="Sign up"
                    FontSize="14"
                    FontAttributes="Bold"
                    BackgroundColor="Transparent"
                    TextColor="#4F378A"
                    Command="{Binding SignUpCommand}"/>
        </StackLayout>
    </Grid>
</ContentPage>
