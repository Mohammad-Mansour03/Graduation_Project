<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.LogInPage"
             Title="LogInPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#ECE6F0"
             >
    <Grid RowDefinitions="*, Auto, Auto, *, Auto, *" 
          ColumnDefinitions="20, *, 20">
       
        <!-- Close Icon -->
        <ImageButton Source="back_icon.png" 
                     Grid.Row="0" Grid.Column="0" 
                     HorizontalOptions="Start"
                     Padding="3"
                     Margin="10"
                     VerticalOptions="Start" 
                     BackgroundColor="Transparent"
                     WidthRequest="40" 
                     HeightRequest="90"
                     Clicked="ReturnToThePrevious"/>

        <!-- Title -->
        <Label Text="Log in" 
               FontSize="36" 
               FontAttributes="Bold"
               FontFamily="Montserrat"
               Grid.Row="1" Grid.Column="1" 
               HorizontalOptions="Center" 
               VerticalOptions="Center"
               TextColor="Black" 
               Margin="20"/>

        <!-- Form -->
        <StackLayout Grid.Row="2" Grid.Column="1" Spacing="20">
            <!-- Email Entry -->
            <Border
                Margin="0,20,0,0"
                Background="White"
                StrokeShape="RoundRectangle 20" 
                StrokeThickness="1"
                HeightRequest="60"
                Padding="10">

                <Entry  Placeholder="Email" 
                        FontSize="18" 
                        TextColor="Black"/>
            </Border>

            <!-- Password Entry with Frame -->
            <Border
              Background="White"
              StrokeShape="RoundRectangle 20" 
              StrokeThickness="1"
              HeightRequest="60"
              Padding="10"
             >

                <Entry Placeholder="Password" 
                       FontSize="18" 
                       IsPassword="True"
                       TextColor="Black"
                       />
            </Border>


            <!-- Login Button -->
            <Button Text="log in" 
                    FontSize="18" 
                    FontAttributes="Bold"
                    BackgroundColor="#4F378A" 
                    TextColor="White" 
                    CornerRadius="25"
                    HeightRequest="50"
                    HorizontalOptions="Fill" 
                    Margin="0,15"/>
        </StackLayout>

        <!-- Divider -->
        <StackLayout Grid.Row="3" Grid.Column="1" Margin ="50" Spacing="15">
            <BoxView 
                HeightRequest="1"
                WidthRequest="380"
                BackgroundColor="#CAC4D0" 
                HorizontalOptions="Fill" />
            <Label Text="Or" 
                   FontSize="16" 
                   TextColor="#49454F" 
                   HorizontalOptions="Center" />
            
        </StackLayout>

        <!-- Social Login Buttons -->
        <StackLayout Grid.Row="4" Grid.Column="1"
                     Orientation="Horizontal" 
                     Spacing="60"
                     HorizontalOptions="Center">
            <ImageButton
                Source="facebook_icon.png"
                WidthRequest="15"
                HeightRequest="15"
             />
            
            <ImageButton
                Source="google_icon.png"
                WidthRequest="15"
                HeightRequest="15"
             />

            <ImageButton
                Source="apple_icon.png"
                WidthRequest="15"
                HeightRequest="15"
             />
        </StackLayout>
        
        <StackLayout Grid.Row="5" Grid.Column="1"
                 VerticalOptions="Center"
                 HorizontalOptions="Center"
                 Margin="0,20,0,0">
            <Label Text="Don't have an account?"
               FontSize="14" 
               TextColor="#49454F" 
               HorizontalOptions="Center" />
            <Button Text="Sign up" 
                FontSize="14" 
                FontAttributes="Bold"
                BackgroundColor="Transparent" 
                TextColor="#4F378A" 
                HorizontalOptions="Center"
                Clicked="SignUp"/>
            
        </StackLayout>
    </Grid>

</ContentPage>