<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.ExplorePage"
             Title="Explore"
             BackgroundColor="#F5F5F5">



    <ScrollView>
     
        <VerticalStackLayout Padding="24,20" Spacing="24">
            <!-- Location Section -->
            <Label Text="Location" Style="{StaticResource SectionHeaderStyle}" FontSize="20" FontAttributes="Bold"/>
            
            <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" Margin="0,5"/>
            
            <ScrollView Orientation="Horizontal">
            
                <HorizontalStackLayout Spacing="8">
                
                    <Border Style="{StaticResource FilterChipStyle}">
                    
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                        
                            <Label Text="Amman" FontSize="14" TextColor="#424242" FontAttributes="Bold" VerticalTextAlignment="Justify"/>

                            <CheckBox Color="#4F378A" VerticalOptions="Center"/>
                            
                        </HorizontalStackLayout>
                
                    </Border>
        
                </HorizontalStackLayout>
            </ScrollView>

           

            <!-- Activity Section -->
            <Label Text="Activity" Style="{StaticResource SectionHeaderStyle}" FontSize="20" FontAttributes="Bold"/>
            <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" Margin="0,5"/>
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout Spacing="8">
                    <Border Style="{StaticResource FilterChipStyle}">
                        <!--Formal-->
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                            <Label Text="Formal" FontSize="14" TextColor="#424242" FontAttributes="Bold" VerticalTextAlignment="Justify"/>
                            <CheckBox Color="#4F378A" VerticalOptions="Center"/>
                           
                        </HorizontalStackLayout>
                    </Border>
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                            <!--Casual-->
                            <Label Text="Casual" FontSize="14" TextColor="#424242" FontAttributes="Bold" VerticalTextAlignment="Justify"/>
                            <CheckBox Color="#4F378A" VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                            <!--Professional-->
                            <Label Text="Professional" FontSize="14" TextColor="#424242" FontAttributes="Bold" VerticalTextAlignment="Justify"/>
                            <CheckBox Color="#4F378A" VerticalOptions="Center"/>
                            
                        </HorizontalStackLayout>
                    </Border>
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                            <!--Indoor-->
                            <Label Text="Indoor" FontSize="14" TextColor="#424242" FontAttributes="Bold" VerticalTextAlignment="Justify"/>
                            <CheckBox Color="#4F378A" VerticalOptions="Center"/>
                            
                        </HorizontalStackLayout>
                    </Border>
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                           <!--Outdoor-->
                            <Label Text="Outdoor" FontSize="14" TextColor="#424242" FontAttributes="Bold" VerticalTextAlignment="Justify"/>
                            <CheckBox Color="#4F378A" VerticalOptions="Center"/>
                           
                        </HorizontalStackLayout>
                    </Border>
                </HorizontalStackLayout>
            </ScrollView>

          

            <!-- Duration Section -->
            <Label Text="Duration" Style="{StaticResource SectionHeaderStyle}" FontSize="20" FontAttributes="Bold" VerticalTextAlignment="Justify"/>
            <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" Margin="0,5"/>
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout Spacing="8">
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                            <!--Hourly-->
                            <Label Text="Hourly" FontSize="14" TextColor="#424242" FontAttributes="Bold" VerticalTextAlignment="Justify"/>
                            <CheckBox Color="#4F378A" VerticalOptions="Center"/>
                           
                        </HorizontalStackLayout>
                    </Border>
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                            <!--Full Day-->
                            <Label Text="Full-Day" FontSize="14" TextColor="#424242" FontAttributes="Bold" VerticalTextAlignment="Justify"/>
                            <CheckBox Color="#4F378A" VerticalOptions="Center"/>
                          
                        </HorizontalStackLayout>
                    </Border>

                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                            <!--Long Term-->
                            <Label Text="Long-Term" FontSize="14" TextColor="#424242" FontAttributes="Bold" VerticalTextAlignment="Justify"/>
                            <CheckBox Color="#4F378A" VerticalOptions="Center"/>
                        
                        </HorizontalStackLayout>
                    </Border>

                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                        <!--Half Day-->
                            <Label Text="Half-Day" FontSize="14" TextColor="#424242" FontAttributes="Bold" VerticalTextAlignment="Justify"/>
                            <CheckBox Color="#4F378A" VerticalOptions="Center"/>
                            
                        </HorizontalStackLayout>
                    </Border>
                    
                </HorizontalStackLayout>
            </ScrollView>

         

            <!-- Size/Capacity Section -->
            <Label Text="Size/Capacity" Style="{StaticResource SectionHeaderStyle}" FontSize="20" FontAttributes="Bold" VerticalTextAlignment="Justify"/>
            <BoxView HeightRequest="1" BackgroundColor="#E0E0E0" Margin="0,5"/>
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout Spacing="8">
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                            <!--Small-->
                            <Label Text="Small (10-50)" FontSize="14" TextColor="#424242" FontAttributes="Bold" VerticalTextAlignment="Justify"/>
                            <CheckBox Color="#4F378A" VerticalOptions="Center"/>
                            
                        </HorizontalStackLayout>
                    </Border>
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                            <!--Meduim-->
                            <Label Text="Medium (50-200)" FontSize="14" TextColor="#424242" FontAttributes="Bold" VerticalTextAlignment="Justify"/>
                            <CheckBox Color="#4F378A" VerticalOptions="Center"/>
                            
                        </HorizontalStackLayout>
                    </Border>
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                            <!--Large-->
                            <Label Text="Large (200+)" FontSize="14" TextColor="#424242" FontAttributes="Bold" VerticalTextAlignment="Justify"/>
                            <CheckBox Color="#4F378A" VerticalOptions="Center"/>
                            
                        </HorizontalStackLayout>
                    </Border>
                </HorizontalStackLayout>
            </ScrollView>

         

            <!-- Apply Button -->
            <Button Text="Apply" BackgroundColor="#4F378A" TextColor="White" FontSize="18" FontAttributes="Bold" CornerRadius="12" HeightRequest="50" WidthRequest="200" Margin="0,20"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
