<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.ExplorePage"
             Title="ExplorePage">
    <ScrollView>
        <VerticalStackLayout Padding="12" Spacing="20">

            <!-- Location Section -->
            <VerticalStackLayout>
                <Label Text="Location"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#333" />
                <Frame BackgroundColor="#EEE"
                       CornerRadius="10"
                       Padding="10"
                       HasShadow="False"
                       BorderColor="#CCC">
                    <Label Text="Amman"
                           FontSize="14"
                           TextColor="#666" />
                </Frame>
            </VerticalStackLayout>

            <!-- Activity Section -->
            <Label Text="Activity" FontSize="20" FontAttributes="Bold" Margin="0,10,0,0"/>
            <VerticalStackLayout>
                <RadioButton GroupName="Activity" Content="Formal"/>
                <RadioButton GroupName="Activity" Content="Casual"/>
                <RadioButton GroupName="Activity" Content="Professional"/>
                <RadioButton GroupName="Activity" Content="Indoor"/>
                <RadioButton GroupName="Activity" Content="Outdoor"/>
                <RadioButton GroupName="Activity" Content="Conference"/>
                <RadioButton GroupName="Activity" Content="Celebration"/>
                <RadioButton GroupName="Activity" Content="Entertainment"/>
            </VerticalStackLayout>

            <!-- Duration Section -->
            <Label Text="Duration" FontSize="20" FontAttributes="Bold" Margin="0,10,0,0"/>
            <VerticalStackLayout>
                <RadioButton GroupName="Duration" Content="Hourly"/>
                <RadioButton GroupName="Duration" Content="Full-Day"/>
                <RadioButton GroupName="Duration" Content="Half-Day"/>
                <RadioButton GroupName="Duration" Content="Long-Term"/>
            </VerticalStackLayout>

            <!-- Size/Capacity Section -->
            <Label Text="Size/Capacity" FontSize="20" FontAttributes="Bold" Margin="0,10,0,0"/>
            <VerticalStackLayout>
                <RadioButton GroupName="Size" Content="Small (10-50)"/>
                <RadioButton GroupName="Size" Content="Medium (50-200)"/>
                <RadioButton GroupName="Size" Content="Large (200+)"/>
            </VerticalStackLayout>

            <!-- Apply Button -->
            <Button Text="Apply"
                    BackgroundColor="#333"
                    TextColor="White"
                    FontSize="16"
                    CornerRadius="10"
                    HeightRequest="50"
                    HorizontalOptions="FillAndExpand" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
