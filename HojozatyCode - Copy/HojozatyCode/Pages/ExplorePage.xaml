<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.ExplorePage"
             Title="Explore"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="20,16" Spacing="24">

            <!-- Location Section -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Location"
                       Style="{StaticResource SectionHeaderStyle}"/>
                <Border Stroke="#E0E0E0"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 12"
                        BackgroundColor="White"
                        Padding="16,12">
                    <HorizontalStackLayout Spacing="12">
                        <Image Source="location_pin.png"
                               HeightRequest="20"
                               WidthRequest="20"/>
                        <Label Text="Amman"
                               FontSize="16"
                               TextColor="#424242"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>
            </VerticalStackLayout>

            <!-- Activity Section -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Activity" 
                       Style="{StaticResource SectionHeaderStyle}"/>
                <FlexLayout Wrap="Wrap" AlignItems="Start" JustifyContent="Start">
                    <!-- Activity Items -->
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                            <CheckBox Color="#2196F3"/>
                            <Label Text="Formal" FontSize="14" TextColor="#424242"/>
                        </HorizontalStackLayout>
                    </Border>
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                            <CheckBox Color="#2196F3"/>
                            <Label Text="Casual" FontSize="14" TextColor="#424242"/>
                        </HorizontalStackLayout>
                    </Border>
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                            <CheckBox Color="#2196F3"/>
                            <Label Text="Professional" FontSize="14" TextColor="#424242"/>
                        </HorizontalStackLayout>
                    </Border>
                    <!-- Add remaining activity items similarly -->
                </FlexLayout>
            </VerticalStackLayout>

            <!-- Duration Section -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Duration" 
                       Style="{StaticResource SectionHeaderStyle}"/>
                <FlexLayout Wrap="Wrap" AlignItems="Start" JustifyContent="Start">
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                            <CheckBox Color="#2196F3"/>
                            <Label Text="Hourly" FontSize="14" TextColor="#424242"/>
                        </HorizontalStackLayout>
                    </Border>
                    <!-- Add other duration items similarly -->
                </FlexLayout>
            </VerticalStackLayout>

            <!-- Size/Capacity Section -->
            <VerticalStackLayout Spacing="8">
                <Label Text="Size/Capacity" 
                       Style="{StaticResource SectionHeaderStyle}"/>
                <FlexLayout Wrap="Wrap" AlignItems="Start" JustifyContent="Start">
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                            <CheckBox Color="#2196F3"/>
                            <Label Text="Small (10-50)" FontSize="14" TextColor="#424242"/>
                        </HorizontalStackLayout>
                    </Border>
                    <!-- Add other size items similarly -->
                </FlexLayout>
            </VerticalStackLayout>

            <!-- Apply Button -->
            <Button Text="Apply Filters"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="0,20"/>

        </VerticalStackLayout>
    </ScrollView>

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Section Header Style -->
            <Style x:Key="SectionHeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="#212121"/>
            </Style>

            <!-- Filter Chip Style -->
            <Style x:Key="FilterChipStyle" TargetType="Border">
                <Setter Property="Margin" Value="0,0,8,8"/>
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="Stroke" Value="#E0E0E0"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 20"/>
            </Style>

            <!-- Primary Button Style -->
            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#2196F3"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal"/>
                            <VisualState x:Name="Pressed">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="#1976D2"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>