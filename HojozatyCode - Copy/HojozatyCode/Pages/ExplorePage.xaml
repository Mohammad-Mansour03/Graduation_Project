<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.ExplorePage"
             Title="Explore"
             BackgroundColor="#F5F5F5">

    <VerticalStackLayout Padding="24,10" Spacing="16">

        <!-- 🔹 Header with Back Button & Title -->
        <Grid ColumnDefinitions="40, *, 40">
            <Button Text="←" FontSize="24" BackgroundColor="Transparent"
                    HorizontalOptions="Start"/>
            <Label Text="Explore" FontSize="24" FontAttributes="Bold"
                   HorizontalOptions="Start" VerticalOptions="Center"
                   TextColor="#212121"/>
        </Grid>

        <ScrollView>
            <VerticalStackLayout Padding="0,10" Spacing="24">

                <!-- Location Section -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Location"
                           Style="{StaticResource SectionHeaderStyle}"/>

                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10">
                            <CheckBox Color="Black" VerticalOptions="Center"/>
                            <Label Text="Amman" FontSize="12" TextColor="#424242" FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                </VerticalStackLayout>

                <!-- 🔹 Modern Divider -->
                <Border BackgroundColor="#E0E0E0" StrokeThickness="0" HeightRequest="2" 
                        Margin="0,10" WidthRequest="100%" HorizontalOptions="Fill" 
                        StrokeShape="RoundRectangle 2"/>

                <!-- Activity Section -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Activity" 
                           Style="{StaticResource SectionHeaderStyle}"/>
                    <FlexLayout Wrap="Wrap" AlignItems="Center">
                        <Border Style="{StaticResource FilterChipStyle}">
                            <HorizontalStackLayout Spacing="8" Padding="16,10">
                                <CheckBox Color="Black" VerticalOptions="Center"/>
                                <Label Text="Formal" FontSize="12" TextColor="#424242" FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Border>

                        <Border Style="{StaticResource FilterChipStyle}">
                            <HorizontalStackLayout Spacing="8" Padding="16,10">
                                <CheckBox Color="Black" VerticalOptions="Center"/>
                                <Label Text="Casual" FontSize="12" TextColor="#424242" FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </HorizontalStackLayout>
                        </Border>
                    </FlexLayout>
                </VerticalStackLayout>

                <!-- 🔹 Modern Divider -->
                <Border BackgroundColor="#E0E0E0" StrokeThickness="0" HeightRequest="2" 
                        Margin="0,10" WidthRequest="100%" HorizontalOptions="Fill" 
                        StrokeShape="RoundRectangle 2"/>

                <!-- Apply Button -->
                <Button Text="Apply"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="0,20"/>

            </VerticalStackLayout>
        </ScrollView>

    </VerticalStackLayout>

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Section Header Style -->
            <Style x:Key="SectionHeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="#212121"/>
                <Setter Property="HorizontalOptions" Value="Start"/>
            </Style>

            <!-- Filter Chip Style -->
            <Style x:Key="FilterChipStyle" TargetType="Border">
                <Setter Property="Margin" Value="0,0,8,8"/>
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="Stroke" Value="#E0E0E0"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 20"/>
            </Style>

            <!-- Primary Button Style -->
            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Black"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="HorizontalOptions" Value="Fill"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>
