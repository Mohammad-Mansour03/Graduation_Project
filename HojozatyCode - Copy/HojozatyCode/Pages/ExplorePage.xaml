<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.ExplorePage"
             Title="Explore"
             BackgroundColor="#F5F5F5">

    <ScrollView>
        <VerticalStackLayout Padding="24,20" Spacing="24"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">

            <!-- Location Section -->
            <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                <Label Text="Location"
                       Style="{StaticResource SectionHeaderStyle}"
                       HorizontalOptions="Center"/>
                
                <Border Style="{StaticResource FilterChipStyle}">
                    <HorizontalStackLayout Spacing="8" Padding="16,10"
                           HorizontalOptions="Center"
                           VerticalOptions="Center">
                        <CheckBox Color="Black" VerticalOptions="Center"/>
                        <Label Text="Amman" FontSize="12" TextColor="#424242" FontAttributes="Bold"
               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>
                
            </VerticalStackLayout>

            <!-- Activity Section -->
            <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                <Label Text="Activity" 
                       Style="{StaticResource SectionHeaderStyle}"
                       HorizontalOptions="Center"/>
                <FlexLayout Wrap="Wrap" AlignItems="Center" JustifyContent="Center">
                    <!-- Activity Items -->
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center">
                            <CheckBox Color="Black" VerticalOptions="Center"/>
                            <Label Text="Formal" FontSize="12" TextColor="#424242" FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10"
                           HorizontalOptions="Center"
                           VerticalOptions="Center">
                            <CheckBox Color="Black" VerticalOptions="Center"/>
                            <Label Text="Casual" FontSize="12" TextColor="#424242" FontAttributes="Bold"
               VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10"
                           HorizontalOptions="Center"
                           VerticalOptions="Center">
                            <CheckBox Color="Black" VerticalOptions="Center"/>
                            <Label Text="Professional" FontSize="12" TextColor="#424242" FontAttributes="Bold"
               VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10"
                           HorizontalOptions="Center"
                           VerticalOptions="Center">
                            <CheckBox Color="Black" VerticalOptions="Center"/>
                            <Label Text="Indoor" FontSize="12" TextColor="#424242" FontAttributes="Bold"
               VerticalOptions="Center"/> 
                        </HorizontalStackLayout>
                    </Border>

                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10"
                           HorizontalOptions="Center"
                           VerticalOptions="Center">
                            <CheckBox Color="Black" VerticalOptions="Center"/>
                            <Label Text="Outdoor" FontSize="12" TextColor="#424242" FontAttributes="Bold"
               VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center">
                            <CheckBox Color="Black" VerticalOptions="Center"/>
                            <Label Text="Conference" FontSize="12" TextColor="#424242" FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center">
                            <CheckBox Color="Black" VerticalOptions="Center"/>
                            <Label Text="Celebration" FontSize="12" TextColor="#424242" FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                    
                    
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10"
                           HorizontalOptions="Center"
                           VerticalOptions="Center">
                            <CheckBox Color="Black" VerticalOptions="Center"/>
                            <Label Text="Entertainment" FontSize="12" TextColor="#424242" FontAttributes="Bold"
               VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                    
                    
                </FlexLayout>
            </VerticalStackLayout>

            <!-- Duration Section -->
            <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                <Label Text="Duration" 
                       Style="{StaticResource SectionHeaderStyle}"
                       HorizontalOptions="Center"/>
                <FlexLayout Wrap="Wrap" AlignItems="Center" JustifyContent="Center">
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center">
                            <CheckBox Color="Black" VerticalOptions="Center"/>
                            <Label Text="Hourly" FontSize="12" TextColor="#424242" FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10"
                           HorizontalOptions="Center"
                           VerticalOptions="Center">
                            <CheckBox Color="Black" VerticalOptions="Center"/>
                            <Label Text="Full-Day" FontSize="12" TextColor="#424242" FontAttributes="Bold"
               VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10"
                           HorizontalOptions="Center"
                           VerticalOptions="Center">
                            <CheckBox Color="Black" VerticalOptions="Center"/>
                            <Label Text="Half-Day" FontSize="12" TextColor="#424242" FontAttributes="Bold"
               VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10"
                           HorizontalOptions="Center"
                           VerticalOptions="Center">
                            <CheckBox Color="Black" VerticalOptions="Center"/>
                            <Label Text="Long-Term" FontSize="12" TextColor="#424242" FontAttributes="Bold"
               VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                </FlexLayout>
            </VerticalStackLayout>

            <!-- Size/Capacity Section -->
            <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                <Label Text="Size/Capacity" 
                       Style="{StaticResource SectionHeaderStyle}"
                       HorizontalOptions="Center"/>
                <FlexLayout Wrap="Wrap" AlignItems="Center" JustifyContent="Center">
                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center">
                            <CheckBox Color="Black" VerticalOptions="Center"/>
                            <Label Text="Small (10-50)" FontSize="12" TextColor="#424242" FontAttributes="Bold"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                            <CheckBox Color="Black" VerticalOptions="Center"/>
                            <Label Text="Meduim(50-200)" FontSize="12" TextColor="#424242" FontAttributes="Bold"
                VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <Border Style="{StaticResource FilterChipStyle}">
                        <HorizontalStackLayout Spacing="8" Padding="16,10"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                            <CheckBox Color="Black" VerticalOptions="Center"/>
                            <Label Text="Large(200+)" FontSize="12" TextColor="#424242" FontAttributes="Bold"
                VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                </FlexLayout>
            </VerticalStackLayout>

            <!-- Apply Button -->
            <Button Text="Apply"
                    Style="{StaticResource PrimaryButtonStyle}"
                    Margin="0,20"
                    WidthRequest="200"
                    HorizontalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Section Header Style -->
            <Style x:Key="SectionHeaderStyle" TargetType="Label">
                <Setter Property="FontSize" Value="18"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextColor" Value="#212121"/>
            </Style>

            <!-- Filter Chip Style -->
            <Style x:Key="FilterChipStyle" TargetType="Border">
                <Setter Property="Margin" Value="0,0,8,8"/>
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="Stroke" Value="#E0E0E0"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="StrokeShape" Value="RoundRectangle 20"/>
            </Style>

            <!-- Primary Button Style -->
            <Style x:Key="PrimaryButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="Black"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="CornerRadius" Value="12"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>
