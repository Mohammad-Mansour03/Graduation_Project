<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:HojozatyCode.ViewModels"
             Shell.TabBarIsVisible="False"
             x:Class="HojozatyCode.Pages.SuccessPage">

    <Grid VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"
          RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="Auto">

        <!-- Success Icon -->
        <Border Grid.Row="0"
                WidthRequest="216"
                HeightRequest="226" 
                StrokeShape="RoundRectangle 15" 
                BackgroundColor="#4CAF50"
                Padding="10">
            
            <Label Text="âœ“" 
                   FontSize="100"
                   TextColor="White"
                   HorizontalOptions="Center" 
                   VerticalOptions="Center"/>
        </Border>

        <!-- Success Message -->
        <Label Grid.Row="1"
               Text="Success!"
               FontSize="28" 
               FontAttributes="Bold" 
               TextColor="Black"
               HorizontalOptions="Center"
               Margin="0,20,0,10" />      
        
        <!-- The Place Was Added Message -->
        <Label Grid.Row="2"
               Text="The Place Was Added!"
               FontSize="28" 
               FontAttributes="Bold" 
               TextColor="Black"
               HorizontalOptions="Center"
               Margin="0,20,0,10" />

        <!-- My Spaces Button -->
        <Button Grid.Row="3" 
                Text="My Spaces"
                BackgroundColor="#4F378A"
                TextColor="White"
                CornerRadius="25"
                WidthRequest="160"
                HeightRequest="50"
                FontSize="18"
                HorizontalOptions="Center"
                Command="{Binding GoToMySpaceCommand}"/>

        <!-- Add Another Space Button -->
        <Button Grid.Row="4"
                Text="Add Another Space"
                BackgroundColor="#4F378A"
                TextColor="White"
                CornerRadius="25"
                WidthRequest="160"
                HeightRequest="50"
                FontSize="18"
                HorizontalOptions="Center"
                Margin="0,10,0,0"
                Command="{Binding GoToAddSpaceCommand}"/>

        <!-- Close Button -->
        <Button Grid.Row="5"
                Text="Close"
                BackgroundColor="#4F378A"
                TextColor="White"
                CornerRadius="25"
                WidthRequest="160"
                HeightRequest="50"
                FontSize="18"
                HorizontalOptions="Center"
                Margin="0,10,0,0"
                Command="{Binding GoToHomeCommand}" />

    </Grid>

</ContentPage>
