<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:HojozatyCode.ViewModels"
             Shell.TabBarIsVisible="False"
             x:Class="HojozatyCode.Pages.SuccessPage"
             BackgroundColor="#F9FAFB">

    <VerticalStackLayout Spacing="24" 
                        VerticalOptions="Center" 
                        HorizontalOptions="Center"
                        Padding="24">

        <!-- Success Icon Container -->
        <Border HorizontalOptions="Center"
                WidthRequest="120"
                HeightRequest="120"
                Stroke="Transparent"
                BackgroundColor="#4F378A"
                StrokeShape="RoundRectangle 60"
                Padding="0">
            <Label Text="âœ“"
                   FontSize="48"
                   TextColor="White"
                   VerticalOptions="Center"
                   HorizontalOptions="Center"/>
        </Border>

        <!-- Success Messages -->
        <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
            <Label Text="Success!"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="#1F2937"
                   HorizontalOptions="Center"/>

            <Label Text="The place was added successfully "
                   VerticalTextAlignment="Center"
                   FontSize="18"
                   TextColor="#6B7280"
                   HorizontalOptions="Center"/>
            <Label Text="and under review "
                VerticalTextAlignment="Center"
                FontSize="18"
                TextColor="#6B7280"
                 HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <!-- Action Buttons -->
        <VerticalStackLayout Spacing="16" WidthRequest="260">
            <Button Text="My Spaces"
                    BackgroundColor="#4F378A"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="50"
                    FontSize="16"
                    FontAttributes="Bold"
                    Command="{Binding GoToMySpaceCommand}"/>

            <Button Text="Add Another Space"
                    BackgroundColor="Transparent"
                    TextColor="#4F378A"
                    BorderColor="#4F378A"
                    BorderWidth="2"
                    CornerRadius="12"
                    HeightRequest="50"
                    FontSize="16"
                    FontAttributes="Bold"
                    Command="{Binding GoToAddSpaceCommand}"/>

            <Button Text="Close"
                    BackgroundColor="Transparent"
                    TextColor="#6B7280"
                    BorderColor="Transparent"
                    HeightRequest="50"
                    FontSize="16"
                    Command="{Binding GoToHomeCommand}"/>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ContentPage>