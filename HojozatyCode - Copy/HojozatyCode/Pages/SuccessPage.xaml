<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:HojozatyCode.ViewModels"
             x:Class="HojozatyCode.Pages.SuccessPage"
             Title="Success">

    <Grid VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand"
          RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto">

        <!-- Success Icon -->
        <Frame Grid.Row="0" WidthRequest="216" HeightRequest="226" CornerRadius="100" 
               BorderColor="Purple" BackgroundColor="LawnGreen"
               HasShadow="True" Padding="10">
            <Label Text="âœ“" FontSize="100" TextColor="black"
                   HorizontalOptions="Center" VerticalOptions="Center"/>
        </Frame>

        <!-- Success Message -->
        <Label Grid.Row="1" Text="Success!"
               FontSize="28" FontAttributes="Bold" TextColor="Black"
               HorizontalOptions="Center" Margin="0,20,0,10" />

        <!-- My Spaces Button -->
        <Button Grid.Row="2" Text="My Spaces" BackgroundColor="Purple" TextColor="White"
                CornerRadius="25" WidthRequest="160" HeightRequest="50"
                FontSize="18" HorizontalOptions="Center" />

        <!-- Close Button -->
        <Button Grid.Row="3" Text="Close" BackgroundColor="Purple" TextColor="White"
                CornerRadius="25" WidthRequest="160" HeightRequest="50"
                FontSize="18" HorizontalOptions="Center" Margin="0,10,0,0"
                Command="{Binding GoToHomeCommand}" />

    </Grid>

</ContentPage>
