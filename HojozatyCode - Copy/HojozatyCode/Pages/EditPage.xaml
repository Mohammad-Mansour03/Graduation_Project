<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HojozatyCode.ViewModels"
             x:Class="HojozatyCode.Pages.EditPage"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#F9F6FC">
    

    <ContentPage.BindingContext>
        <vm:MySpaceViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="30" Padding="24,20">

            <!-- Header -->
            <VerticalStackLayout Spacing="8" HorizontalOptions="Center">
                <Grid HorizontalOptions="Center"
                     VerticalOptions="Center"
                         HeightRequest="120"
                        WidthRequest="120"
                            Padding="0">

                    <!-- Outer Circle Effect (Optional Glow Background) -->
                    <Frame CornerRadius="60"
                           BackgroundColor="#EFE9FB"
                           HasShadow="False"
                           Padding="0"
                           IsClippedToBounds="True"
                          HorizontalOptions="Center"
                     VerticalOptions="Center"
                     HeightRequest="120"
                     WidthRequest="120">
                        <!-- Venue Image -->
                        <Image Source="{Binding ImageUrls[0]}"
                          Aspect="AspectFill"
                          HorizontalOptions="Fill"
                          VerticalOptions="Fill" />
                            </Frame>

                    <Image Source="camera.png"
           HeightRequest="26"
           WidthRequest="26"
           HorizontalOptions="End"
           VerticalOptions="End"
           Margin="4"/>

                </Grid>

                <Label Text="Edit Venue Details"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#1A1A1A"
                       HorizontalOptions="Center"/>

                <BoxView HeightRequest="2"
                         WidthRequest="240"
                         Color="#4F378A"
                         HorizontalOptions="Center"
                         CornerRadius="1"/>
            </VerticalStackLayout>

            <!-- Form Card -->
            <Frame CornerRadius="20"
                   Padding="24"
                   BackgroundColor="White"
                   HasShadow="True"
                   Margin="0,10">
                <VerticalStackLayout Spacing="22">

                    <!-- Input Field Template -->
                    <!-- VENUE NAME -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Venue Name"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="#555"/>
                        <Border BackgroundColor="#F1F1F5"
                                Stroke="#E3E3EC"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12">
                            <Entry Text="{Binding VenueName}"
                                   Placeholder="e.g., Skyline Hall"
                                   FontSize="16"
                                   BackgroundColor="Transparent"
                                   TextColor="#222"
                                   PlaceholderColor="#999"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- VENUE PHONE -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Phone Number"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="#555"/>
                        <Border BackgroundColor="#F1F1F5"
                                Stroke="#E3E3EC"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12">
                            <Entry Text="{Binding VenuePhone}"
                                   Placeholder="+962 7X XXX XXXX"
                                   FontSize="16"
                                   Keyboard="Telephone"
                                   BackgroundColor="Transparent"
                                   TextColor="#222"
                                   PlaceholderColor="#999"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- VENUE EMAIL -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Email"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="#555"/>
                        <Border BackgroundColor="#F1F1F5"
                                Stroke="#E3E3EC"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12">
                            <Entry Text="{Binding VenueEmail}"
                                   Placeholder="contact@example.com"
                                   FontSize="16"
                                   Keyboard="Email"
                                   BackgroundColor="Transparent"
                                   TextColor="#222"
                                   PlaceholderColor="#999"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- VENUE CAPACITY -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Capacity"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="#555"/>
                        <Border BackgroundColor="#F1F1F5"
                                Stroke="#E3E3EC"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12">
                            <Entry Text="{Binding VenueCapacity}"
                                   Placeholder="e.g., 120"
                                   FontSize="16"
                                   Keyboard="Numeric"
                                   BackgroundColor="Transparent"
                                   TextColor="#222"
                                   PlaceholderColor="#999"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- PRICE -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Price Per Hour"
                               FontSize="13"
                               FontAttributes="Bold"
                               TextColor="#555"/>
                        <Border BackgroundColor="#F1F1F5"
                                Stroke="#E3E3EC"
                                StrokeThickness="1"
                                StrokeShape="RoundRectangle 12">
                            <Grid ColumnDefinitions="Auto,*" Padding="12,8">
                                <Label Text="JOD"
                                       VerticalOptions="Center"
                                       FontSize="16"
                                       TextColor="#4F378A"
                                       Grid.Column="0"
                                       Margin="0,0,8,0"/>
                                <Entry Text="{Binding InitialPrice}"
                                       Placeholder="0.00"
                                       Keyboard="Numeric"
                                       FontSize="16"
                                       BackgroundColor="Transparent"
                                       TextColor="#222"
                                       PlaceholderColor="#999"
                                       Grid.Column="1"/>
                            </Grid>
                        </Border>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>

    
            <!-- Buttons -->
            <Grid Padding="0" HorizontalOptions="Center">
                <HorizontalStackLayout Spacing="15"
                           HorizontalOptions="Center"
                           VerticalOptions="Center">
                    <Button Text="Save Changes"
                BackgroundColor="#4F378A"
                TextColor="White"
                FontAttributes="Bold"
                FontSize="16"
                CornerRadius="20"
                HeightRequest="40"
                WidthRequest="170"
                Command="{Binding SaveVenueCommand}"/>

                    <Button Text="Cancel"
                BackgroundColor="#FFFFFF"
                TextColor="#4F378A"
                BorderColor="#4F378A"
                BorderWidth="2"
                FontAttributes="Bold"
                FontSize="16"
                CornerRadius="20"
                HeightRequest="40"
                WidthRequest="170"
                Command="{Binding CloseEditCommand}"/>
                </HorizontalStackLayout>
            </Grid>


            <Grid>
            <VerticalStackLayout>
            <Button Text="Delete Venue"
                 BackgroundColor="#FFEFEF"
                 TextColor="#D72638"
                    BorderColor="#D72638"
                    BorderWidth="1"
                    FontAttributes="Bold"
                    FontSize="15"
                 CornerRadius="20"
                 HeightRequest="40"
                   WidthRequest="170"
                 Command="{Binding DeleteVenueEditCommand}"
             CommandParameter="{Binding Venue}"/>
            </VerticalStackLayout>
            </Grid>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
