<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.ChatList">
    
    <!--Chating Lists-->
    <ContentPage.Resources>
        <x:Array x:Key="DummyChats" Type="{x:Type x:Object}">
            <x:String>Chat 1</x:String>
            <x:String>Chat 2</x:String>
            <x:String>Chat 3</x:String>
        </x:Array>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Grid Grid.Row="0" 
              Padding="16,8" 
              BackgroundColor="White"
              ColumnDefinitions="*,Auto">
            
            <Label Grid.Column="0"
                   Text="Messages"
                   FontSize="24"
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>
            
            <Button Grid.Column="1"
                    Text="+"
                    FontSize="24"
                    WidthRequest="40"
                    HeightRequest="40"
                    CornerRadius="20"
                    BackgroundColor="#6B4CE6"
                    TextColor="White"
                    Clicked="OnNewChatClicked"/>
        </Grid>

        <!-- Chat List -->
        <CollectionView Grid.Row="1"
                       ItemsSource="{StaticResource DummyChats}"
                       SelectionMode="Single"
                       SelectionChanged="OnChatClicked">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="16,12"
                          ColumnDefinitions="Auto,*,Auto"
                          RowDefinitions="Auto,Auto">
                        
                        <!-- Profile Picture -->
                        <Border Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="0"
                                HeightRequest="50"
                                WidthRequest="50"
                                StrokeShape="RoundRectangle 25"
                                Padding="0"
                                Margin="0,0,12,0">
                            <Image Source="https://w7.pngwing.com/pngs/340/946/png-transparent-avatar-user-computer-icons-software-developer-avatar-child-face-heroes-thumbnail.png"
                                   Aspect="AspectFill"/>
                        </Border>

                        <!-- Name and Status -->
                        <StackLayout Grid.Row="0"
                                     Grid.Column="1"
                                     Spacing="4">
                            <Label Text="Owner"
                                   FontAttributes="Bold"
                                   TextColor="#1A1A1A"/>
                            <Label Text="Online"
                                   FontSize="12"
                                   TextColor="#666666"/>
                        </StackLayout>

                        <!-- Timestamp -->
                        <Label Grid.Row="0"
                               Grid.Column="2"
                               Text="12:00 PM"
                               FontSize="12"
                               TextColor="#666666"/>

                        <!-- Last Message -->
                        <Label Grid.Row="1"
                               Grid.Column="1"
                               Grid.ColumnSpan="2"
                               Text="Hello, this is a dummy message!"
                               FontSize="14"
                               TextColor="#666666"
                               LineBreakMode="TailTruncation"
                               MaxLines="1"/>

                        <!-- Unread Messages Indicator -->
                        <Border Grid.Row="1"
                                Grid.Column="2"
                                IsVisible="True"
                                BackgroundColor="#6B4CE6"
                                HeightRequest="20"
                                WidthRequest="20"
                                StrokeShape="RoundRectangle 10"
                                Padding="0"
                                HorizontalOptions="End"
                                VerticalOptions="Center">
                            <Label Text="1"
                                   TextColor="White"
                                   FontSize="12"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Border>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>