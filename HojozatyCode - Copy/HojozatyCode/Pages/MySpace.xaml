<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HojozatyCode.ViewModels"
             x:Class="HojozatyCode.Pages.MySpace">

    <ContentPage.BindingContext>
        <vm:MySpaceViewModel />
    </ContentPage.BindingContext>



    <StackLayout Padding="20">
        <Label Text="My Spaces"/>

        <!--<ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" />-->
        <CollectionView ItemsSource="{Binding UserVenues}" >
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame Padding="10" Margin="5" CornerRadius="10" BackgroundColor="LightGray">
                            <StackLayout>
                                <Label Text="{Binding VenueName}" FontSize="20" FontAttributes="Bold" />
                                <Label Text="{Binding Location}" FontSize="16" />
                                <Label Text="Capacity: {Binding Capacity}" FontSize="14" />
                            </StackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>