<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HojozatyCode.ViewModels"
             x:Class="HojozatyCode.Pages.MySpace"
             BackgroundColor="#F8F9FA">

    <ContentPage.BindingContext>
        <vm:MySpaceViewModel />
    </ContentPage.BindingContext>

    <AbsoluteLayout>
        <!-- Scrollable Content (takes full space) -->
        <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,1"
                    AbsoluteLayout.LayoutFlags="All">
            <VerticalStackLayout Spacing="25" Padding="20">
                <!-- Header Section -->
                <StackLayout Spacing="5">
                    <Label Text="My Venues"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#2C3E50"
                           HorizontalOptions="Center" />
                    <BoxView HeightRequest="3" 
                             WidthRequest="80"
                             Color="#4F378A"
                             HorizontalOptions="Center"
                             Margin="0,5,0,0"/>
                </StackLayout>

                <!-- Venues Collection -->
                <CollectionView ItemsSource="{Binding Venues}"
                                EmptyView="No venues found"
                                Margin="0,10,0,0">
                    <CollectionView.EmptyViewTemplate>
                        <DataTemplate>
                            <StackLayout VerticalOptions="Center" HorizontalOptions="Center" HeightRequest="200">
                                <Label Text="No venues found" 
                                       FontSize="18" 
                                       TextColor="#7F8C8D"
                                       HorizontalOptions="Center"/>
                                <Label Text="Add a new venue to get started!" 
                                       FontSize="14" 
                                       TextColor="#95A5A6"
                                       HorizontalOptions="Center"/>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.EmptyViewTemplate>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border Stroke="#E0E0E0"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 15"
                                    BackgroundColor="White"
                                    Margin="0,0,0,25"
                                    Padding="0">
                                <Border.Shadow>
                                    <Shadow Brush="#4F378A10"
                                            Offset="0,5"
                                            Radius="12"
                                            Opacity="0.2" />
                                </Border.Shadow>
                                <Grid RowDefinitions="Auto,Auto">
                                    <!-- Image section with overlay and info button -->
                                    <Grid>
                                        <!-- Image with rounded corners -->
                                        <Border StrokeShape="RoundRectangle 15,15,0,0"
                                                Margin="0"
                                                Padding="0">
                                            <Image Source="{Binding ImageUrls[0]}"
                                                   Aspect="AspectFill"
                                                   HeightRequest="220"
                                                   HorizontalOptions="Fill"
                                                   VerticalOptions="Fill" />
                                        </Border>
                                        
                                    </Grid>
                                    <!-- Venue Info -->
                                    <Frame Grid.Row="1"
                                           Padding="15"
                                           HasShadow="False"
                                           BackgroundColor="White"
                                           BorderColor="Transparent">
                                        <Grid RowDefinitions="Auto,Auto,Auto"
                                              ColumnDefinitions="*,Auto"
                                              RowSpacing="8">
                                            <!-- Venue Name -->
                                            <Label Text="{Binding VenueName}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="#2C3E50"
                                                   VerticalOptions="Center"
                                                   Grid.Row="0"
                                                   Grid.Column="0"/>
                                            <!-- Location -->
                                            <HorizontalStackLayout Grid.Row="1" Grid.Column="0" Spacing="10">
                                                <Label Text="{Binding Location}"
                                                       FontSize="13"
                                                       TextColor="#7F8C8D">
                                                    <Label.FontFamily>
                                                        <OnPlatform x:TypeArguments="x:String">
                                                            <On Platform="iOS" Value="SF Pro Text" />
                                                            <On Platform="Android" Value="sans-serif-medium" />
                                                        </OnPlatform>
                                                    </Label.FontFamily>
                                                </Label>
                                            </HorizontalStackLayout>
                                            <!-- Price -->
                                            <Border BackgroundColor="#4F378A"
                                                    StrokeShape="RoundRectangle 12"
                                                    Padding="12,8"
                                                    HorizontalOptions="End"
                                                    VerticalOptions="Center"
                                                    Grid.Row="0"
                                                    Grid.Column="1">
                                                <Label Text="{Binding InitialPrice, StringFormat='JOD{0}/Hr'}"
                                                       TextColor="White"
                                                       FontSize="14"
                                                       FontAttributes="Bold"/>
                                            </Border>
                                            <!-- Action Buttons -->
                                            <FlexLayout Grid.Row="2"
                                                        Grid.ColumnSpan="2"
                                                        JustifyContent="End"
                                                        AlignItems="Center"
                                                        Wrap="Wrap"
                                                        Margin="0,15,0,0">
                                                <!-- Edit Button -->
                                                <Button Text="Edit"
                                                        BackgroundColor="#4F378A"
                                                        TextColor="White"
                                                        BorderWidth="1"
                                                        CornerRadius="20"
                                                        Padding="20,8"
                                                        Margin="0,0,10,0"
                                                        FontAttributes="Bold"
                                                        FontSize="13"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MySpaceViewModel}},
                                                        Path=EditVenueCommand}"
                                                        CommandParameter="{Binding .}"  />

                                                <!-- Delete Button -->
                                                <Button Text="Delete"
                                                        BackgroundColor="White"
                                                        TextColor="#E74C3C"
                                                        BorderColor="#E74C3C"
                                                        BorderWidth="1"
                                                        CornerRadius="20"
                                                        Padding="20,8"
                                                        Margin="0,0,10,0"
                                                        FontAttributes="Bold"
                                                        FontSize="13"
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MySpaceViewModel}}, 
                                                                    Path=DeleteVenueCommand}"
                                                        CommandParameter="{Binding .}" />
                                            </FlexLayout>
                                        </Grid>
                                    </Frame>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Fixed Add Space Button (Bottom-Right Corner) -->
        <ImageButton Source="add_space_icon.png"
                     BorderWidth="1"
                     CornerRadius="20"
                     WidthRequest="40"
                     HeightRequest="40"
                     Padding="3"
                     BackgroundColor="Transparent"
                     AbsoluteLayout.LayoutBounds="1,1,40,40"
                     AbsoluteLayout.LayoutFlags="PositionProportional"
                     Margin="0,0,20,20"
                     Command="{Binding GoToAddSpaceCommand}">
        </ImageButton>
    </AbsoluteLayout>
</ContentPage>