<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:HojozatyCode.ViewModels"
             xmlns:converters="clr-namespace:HojozatyCode.Converters"
             x:Class="HojozatyCode.Pages.SpaceTypeSelectionPage"
             Title="Space Kind">

    <!-- Add the converter to resources -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToImageConverter x:Key="BoolToImageConverter" />
            
            <!-- Style for checkbox-like imagebuttons -->
            <Style x:Key="CheckboxButtonStyle" TargetType="ImageButton">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="BorderColor" Value="Transparent" />
                <Setter Property="WidthRequest" Value="40" />
                <Setter Property="HeightRequest" Value="40" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="Margin" Value="0" />
                <Setter Property="Aspect" Value="AspectFit" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <!--The Caption for the Page-->
            <Label 
                Text="What Kind Of Space Would you Like to Add"
                FontSize="32"
                FontAttributes="Bold"
                LineBreakMode="WordWrap"/>
            
            <!--Work / Meeting Space-->
            <Border Stroke="LightGray" 
                    Padding="15" 
                    Margin="0,10,0,0" 
                    StrokeShape="RoundRectangle 15" >
                
                <Grid ColumnDefinitions="*,Auto">
                
                    <Label Text="Work/Meeting Space" 
                           VerticalOptions="Center"/>
                    
                    <ImageButton Grid.Column="1" 
                                Style="{StaticResource CheckboxButtonStyle}"
                                Source="{Binding SelectedSpaceTypes, Converter={StaticResource BoolToImageConverter}, ConverterParameter='Work/Meeting Space'}"
                                Command="{Binding ToggleSpaceTypeCommand}"
                                CommandParameter="Work/Meeting Space"/>
                </Grid>
            
            </Border>
            
            <!--Wedding Space-->
            <Border 
                Stroke="LightGray"
                Padding="15"
                StrokeShape="RoundRectangle 15">
                
                <Grid ColumnDefinitions="*,Auto">
                    
                    <Label Text="Wedding" 
                           VerticalOptions="Center"/>
                 
                    <ImageButton Grid.Column="1" 
                                Style="{StaticResource CheckboxButtonStyle}"
                                Source="{Binding SelectedSpaceTypes, Converter={StaticResource BoolToImageConverter}, ConverterParameter='Wedding'}"
                                Command="{Binding ToggleSpaceTypeCommand}"
                                CommandParameter="Wedding"/>
                </Grid>
          
            </Border>

              <!--Funeral Space-->
            <Border Stroke="LightGray" 
                    Padding="15"
                    StrokeShape="RoundRectangle 15">
              
                <Grid ColumnDefinitions="*,Auto">
                
                    <Label Text="Funeral" 
                           VerticalOptions="Center"/>
                    
                    <ImageButton Grid.Column="1" 
                                Style="{StaticResource CheckboxButtonStyle}"
                                Source="{Binding SelectedSpaceTypes, Converter={StaticResource BoolToImageConverter}, ConverterParameter='Funeral'}"
                                Command="{Binding ToggleSpaceTypeCommand}"
                                CommandParameter="Funeral"/>
                </Grid>
                
            </Border>

            <!--Entertainment Space-->
            <Border Stroke="LightGray" 
                    Padding="15"
                    StrokeShape="RoundRectangle 15">
                
                <Grid ColumnDefinitions="*,Auto">
                
                    <Label Text="Entertainment" 
                           VerticalOptions="Center"/>
                    
                    <ImageButton Grid.Column="1" 
                                Style="{StaticResource CheckboxButtonStyle}"
                                Source="{Binding SelectedSpaceTypes, Converter={StaticResource BoolToImageConverter}, ConverterParameter='Entertainment'}"
                                Command="{Binding ToggleSpaceTypeCommand}"
                                CommandParameter="Entertainment"/>
                </Grid>
            </Border>   
            
            <!--Photography Space-->
            <Border Stroke="LightGray" 
                    Padding="15"
                    StrokeShape="RoundRectangle 15">
                
                <Grid ColumnDefinitions="*,Auto">

                    <Label Text="Photography" 
                           VerticalOptions="Center"/>
                    
                    <ImageButton Grid.Column="1" 
                                Style="{StaticResource CheckboxButtonStyle}"
                                Source="{Binding SelectedSpaceTypes, Converter={StaticResource BoolToImageConverter}, ConverterParameter='Photography'}"
                                Command="{Binding ToggleSpaceTypeCommand}"
                                CommandParameter="Photography"/>
                </Grid>
            </Border>          
            
            <!--Cultural Events Space-->
            <Border Stroke="LightGray" 
                    Padding="15"
                    StrokeShape="RoundRectangle 15">
                
                <Grid ColumnDefinitions="*,Auto">

                    <Label Text="Cultural Events" 
                           VerticalOptions="Center"/>
                    
                    <ImageButton Grid.Column="1" 
                                Style="{StaticResource CheckboxButtonStyle}"
                                Source="{Binding SelectedSpaceTypes, Converter={StaticResource BoolToImageConverter}, ConverterParameter='Cultural Events'}"
                                Command="{Binding ToggleSpaceTypeCommand}"
                                CommandParameter="Cultural Events"/>
                </Grid>
            </Border> 
            
            <!--Sports Space-->
            <Border Stroke="LightGray" 
                    Padding="15"
                    StrokeShape="RoundRectangle 15">
                
                <Grid ColumnDefinitions="*,Auto">

                    <Label Text="Sports" 
                           VerticalOptions="Center"/>
                    
                    <ImageButton Grid.Column="1" 
                                Style="{StaticResource CheckboxButtonStyle}"
                                Source="{Binding SelectedSpaceTypes, Converter={StaticResource BoolToImageConverter}, ConverterParameter='Sports'}"
                                Command="{Binding ToggleSpaceTypeCommand}"
                                CommandParameter="Sports"/>
                </Grid>
            </Border>

            <!-- Add this right before the Next button -->
            <Label Text="{Binding SpaceType}" 
                   FontSize="Small" 
                   TextColor="Gray" 
                   Margin="0,10,0,0"/>

            <!--The Next button-->
            <Button Text="Next"
                    BackgroundColor="#4F378A"
                    TextColor="White"
                    CornerRadius="25"
                    HeightRequest="25"
                    WidthRequest="150"
                    Margin="0,20,0,0"
                    Command="{Binding NavigateToSpaceInformationCommand}"/>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>