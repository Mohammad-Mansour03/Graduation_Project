<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HojozatyCode.ViewModels"
             x:Class="HojozatyCode.Pages.ViewBookingsPopup"   
             BackgroundColor="White"
             Padding="20"
             Title="ViewBookingsPopup">
    
    <VerticalStackLayout>
        <Label Text="الحجوزات" FontSize="20" HorizontalOptions="Center" />
        <CollectionView x:Name="BookingsListView" ItemsSource="{Binding UserBookings}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" Padding="10" Margin="5">
                        <StackLayout>
                            <Label Text="{Binding CustomerName}" />
                            <Label Text="{Binding StartDateTime }" />
                            <Label Text="{Binding EndDateTime }" />
                            <!-- أضف المزيد حسب خصائص الحجز -->
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="إغلاق" Clicked="ClosePopup" />
    </VerticalStackLayout>
    
</ContentPage>