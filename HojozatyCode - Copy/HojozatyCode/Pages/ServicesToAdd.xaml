<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.ServicesToAdd"
             xmlns:vm="clr-namespace:HojozatyCode.ViewModels"
             xmlns:conv="clr-namespace:HojozatyCode.Converters"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#F9F6FC">

    <Grid RowDefinitions="*,Auto">
        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="20,15">

                <!-- Header with Search -->
                <VerticalStackLayout Spacing="6">
                    <Label Text="Select Services" 
                           FontSize="26"
                           FontAttributes="Bold"
                           TextColor="#2A1B4D"/>

                    <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                        <Label Text="Choose services to include in your booking"
                               FontSize="14"
                               TextColor="#6B7280"/>
                    </Grid>
                </VerticalStackLayout>

                <!-- Service Cards -->
                <FlexLayout Wrap="Wrap" BindableLayout.ItemsSource="{Binding ServicesVenue}"
                            IsVisible="{Binding HasServices}"
                            HorizontalOptions="Fill">

                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Frame WidthRequest="160" 
                                   HeightRequest="220"
                                   Margin="0,0,15,15"
                                   Padding="15"
                                   CornerRadius="16"
                                   BackgroundColor="White"
                                   BorderColor="#EAE5F2"
                                   HasShadow="True">

                                <Grid RowDefinitions="Auto,Auto,*,Auto,Auto">

                                    <!-- Service Name -->
                                    <Label Text="{Binding Name}" 
                                           Grid.Row="1"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="#2A1B4D"
                                           Margin="0,8,0,0"
                                           MaxLines="1"
                                           LineBreakMode="TailTruncation"/>

                                    <!-- Price -->
                                    <Label Text="{Binding Price, StringFormat='{0} JOD'}" 
                                           Grid.Row="2"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#4F378A"
                                           VerticalOptions="End"/>

                                    <!-- Quantity Controls -->
                                    <Grid Grid.Row="3" ColumnDefinitions="*,Auto,*" Margin="0,10">
                                        <Button Text="-" 
                                                Command="{Binding DecreasedQuantityCommand}"
                                                WidthRequest="36"
                                                HeightRequest="36"
                                                CornerRadius="18"
                                                BackgroundColor="#F3EFFF"
                                                TextColor="#4F378A"/>

                                        <Label Text="{Binding Quantity}" 
                                               Grid.Column="1"
                                               FontSize="16"
                                               TextColor="#4F378A"
                                               VerticalTextAlignment="Center"
                                               HorizontalTextAlignment="Center"/>

                                        <Button Text="+" 
                                                Grid.Column="2"
                                                Command="{Binding IncreaseQuantityCommand}"
                                                WidthRequest="36"
                                                HeightRequest="36"
                                                CornerRadius="18"
                                                BackgroundColor="#F3EFFF"
                                                TextColor="#4F378A"/>
                                    </Grid>

                                    <!-- Add/Remove Button -->
                                    <Button Grid.Row="4"
                                            Margin="0,10,0,0"
                                            Text="{Binding Quantity, Converter={StaticResource QuantityToButtonTextConverter}}"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BookingViewModel}}, Path=AddSelectedServiceCommand}"
                                            CommandParameter="{Binding .}"
                                            BackgroundColor="#4F378A"
                                            TextColor="White"
                                            CornerRadius="12"
                                            FontAttributes="Bold"
                                            HeightRequest="40"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </FlexLayout>

                <!-- Selected Services Section -->
                <StackLayout Spacing="12" IsVisible="{Binding BookingServices.Count, Converter={StaticResource CountToVisibilityConverter}}">
                    <!-- Section Header -->
                    <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center">
                        <BoxView Color="#E5E7EB" HeightRequest="1" VerticalOptions="Center" FlexLayout.Grow="1"/>
                        <Label Text="Your Selected Services" 
                               TextColor="#6B7280" 
                               FontSize="16"
                               FontAttributes="Bold"/>
                        <BoxView Color="#E5E7EB" HeightRequest="1" VerticalOptions="Center" FlexLayout.Grow="1"/>
                    </StackLayout>

                    <!-- Selected Services List -->
                    <CollectionView ItemsSource="{Binding BookingServices}"
                                   SelectionMode="None"
                                   Margin="-10,0">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="*,Auto,Auto" 
                                      RowDefinitions="Auto,Auto"
                                      Padding="12"
                                      Margin="0,0,0,8">

                                    <Label Text="{Binding Name}"
                                           Grid.Column="0" Grid.Row="0"
                                           FontSize="16"
                                           TextColor="#2A1B4D"/>

                                    <Label Text="{Binding Quantity, StringFormat='Ã—{0}'}"
                                           Grid.Column="0" Grid.Row="1"
                                           FontSize="14"
                                           TextColor="#6B7280"/>

                                    <Label Text="{Binding TotalPrice, StringFormat='{0} JOD'}"
                                           Grid.Column="1" Grid.RowSpan="2"
                                           FontSize="16"
                                           TextColor="#4F378A"
                                           VerticalOptions="Center"
                                           Margin="0,0,15,0"/>

                                    <Button ImageSource="trash.png"
                                            Grid.Column="2" Grid.RowSpan="2"
                                            WidthRequest="36"
                                            HeightRequest="36"
                                            CornerRadius="18"
                                            BackgroundColor="#FFEBEE"
                                            TextColor="#FF3B30"
                                            FontSize="14"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BookingViewModel}}, Path=DeleteServiceCommand}"
                                            CommandParameter="{Binding .}"/>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <Button Text="Continue to Booking"
                            Margin="0,5,0,0"
                            BackgroundColor="#4F378A"
                            TextColor="White"
                            CornerRadius="12"
                            FontAttributes="Bold"
                            FontSize="16"
                            HeightRequest="50"
                            Command="{Binding GoToReviewBookingCommand}"/>
                </StackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Converters -->
            <conv:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
            <conv:QuantityToButtonTextConverter x:Key="QuantityToButtonTextConverter"/>

            <!-- No Services Template -->
            <DataTemplate x:Key="NoServicesTemplate">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="40">
                    <Label Text="No services available for this venue"
                           FontSize="18"
                           TextColor="#6B7280"
                           HorizontalOptions="Center"
                           Margin="0,20,0,0"/>
                </StackLayout>
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>