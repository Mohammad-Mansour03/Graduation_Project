<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.ServicesToAdd"
             xmlns:vm="clr-namespace:HojozatyCode.ViewModels"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#F9F6FC">

    <Grid RowDefinitions="*,Auto">

        <!-- Scrollable Content -->
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="25">

                <!-- Header -->
                <VerticalStackLayout Spacing="8">
                    <Label Text="Please Choose Your Services"
                           FontSize="28"
                           FontAttributes="Bold"
                           TextColor="#2A1B4D"
                           HorizontalOptions="Start"/>
                    <Label Text="Pick the services you'd like included in your booking"
                           FontSize="16"
                           TextColor="#6B7280"
                           HorizontalOptions="Start"/>
                </VerticalStackLayout>

                <!-- Services List -->
                <CollectionView ItemsSource="{Binding ServicesVenue}"
                                IsVisible="{Binding HasServices}"
                                SelectionMode="None"
                                EmptyViewTemplate="{StaticResource NoServicesTemplate}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="20"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="White"
                                    Padding="0"
                                    StrokeThickness="0"
                                    StrokeShape="RoundRectangle 20"
                                    Shadow="{StaticResource CardShadow}">
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" 
                                      ColumnDefinitions="*,Auto"
                                      Padding="20">

                                    <!-- Service Name -->
                                    <Label Text="{Binding Name}"
                                           Grid.Row="0" Grid.Column="0"
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           TextColor="#2A1B4D" />

                                    <!-- Service Description -->
                                    <Label Text="{Binding Description}"
                                           Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           FontSize="14"
                                           TextColor="#6B7280"
                                           Margin="0,8,0,0"/>

                                    <!-- Price -->
                                    <Label Text="{Binding Price, StringFormat='{0} JOD'}"
                                           Grid.Row="2" Grid.Column="0"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#4F378A"
                                           Margin="0,12,0,0"/>

                                    <!-- Quantity Selector -->
                                    <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                          Margin="0,16,0,0"
                                          ColumnDefinitions="Auto,*,Auto"
                                          HeightRequest="40">

                                        <!-- Decrease Button -->
                                        <Button Text="âˆ’"
                                                Grid.Column="0"
                                                WidthRequest="40"
                                                BackgroundColor="#F3EFFF"
                                                TextColor="#4F378A"
                                                CornerRadius="12"
                                                FontAttributes="Bold"
                                                FontSize="16"
                                                Command="{Binding DecreasedQuantityCommand}" />

                                        <!-- Quantity Entry -->
                                        <Entry Text="{Binding Quantity}"
                                               Grid.Column="1"
                                               Keyboard="Numeric"
                                               FontSize="16"
                                               BackgroundColor="White"
                                               TextColor="#4F378A"
                                               HorizontalTextAlignment="Center"
                                               VerticalTextAlignment="Center"
                                               HeightRequest="40"
                                               Margin="8,0" />

                                        <!-- Increase Button -->
                                        <Button Text="+"
                                                Grid.Column="2"
                                                WidthRequest="40"
                                                BackgroundColor="#F3EFFF"
                                                TextColor="#4F378A"
                                                CornerRadius="12"
                                                FontAttributes="Bold"
                                                FontSize="16"
                                                Command="{Binding IncreaseQuantityCommand}" />
                                    </Grid>

                                    <!-- Select Button -->
                                    <Button Text="Add Service"
                                            Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                                            Margin="0,20,0,0"
                                            BackgroundColor="#4F378A"
                                            TextColor="White"
                                            CornerRadius="14"
                                            FontAttributes="Bold"
                                            FontSize="16"
                                            HeightRequest="50"
                                            Padding="0"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BookingViewModel}}, Path=AddSelectedServiceCommand}"
                                            CommandParameter="{Binding .}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

                <!-- No Services Message -->
                <Label Text="No services available for this venue"
                       FontSize="16"
                       TextColor="Gray"
                       HorizontalOptions="Center"
                       IsVisible="{Binding NoServices}" />

            </VerticalStackLayout>
        </ScrollView>

        <!-- Fixed Next Button -->
        <Button Text="Next"
                Grid.Row="1"
                Margin="20"
                BackgroundColor="#4F378A"
                TextColor="White"
                CornerRadius="12"
                FontAttributes="Bold"
                FontSize="16"
                HeightRequest="50"
                Command="{Binding GoToReviewBookingCommand}"/>
    </Grid>

    <!-- Resources -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Card Shadow -->
            <Shadow x:Key="CardShadow" Brush="#33000000" Offset="0,4" Radius="12" Opacity="0.1"/>

            <!-- No Services Template -->
            <DataTemplate x:Key="NoServicesTemplate">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="40">
                    <Image Source="nofound.png"
                           HeightRequest="120"
                           Aspect="AspectFit"/>
                    <Label Text="No services available at the moment"
                           FontSize="18"
                           TextColor="#6B7280"
                           HorizontalOptions="Center"
                           Margin="0,20,0,0"/>
                </StackLayout>
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>
