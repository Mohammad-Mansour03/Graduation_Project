<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.ServicesToAdd"
             xmlns:vm="clr-namespace:HojozatyCode.ViewModels"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#F9F6FC">

    <Grid RowDefinitions="*,Auto">
        <!-- Scrollable Content -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20,20,20,0" Spacing="30">

                <!-- Header with improved spacing -->
                <VerticalStackLayout Spacing="6">
                    <Label Text="Customize Your Booking"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="#2A1B4D"
                           HorizontalOptions="Start"/>

                    <Label Text="Select services to include in your reservation"
                           FontSize="16"
                           TextColor="#6B7280"
                           HorizontalOptions="Start"/>
                </VerticalStackLayout>

                <!-- Services Section with header -->
                <VerticalStackLayout Spacing="15">
                    <Label Text="Available Services"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#2A1B4D"
                           Margin="0,0,0,5"/>

                    <CollectionView ItemsSource="{Binding ServicesVenue}"
                                    IsVisible="{Binding HasServices}"
                                    SelectionMode="None"
                                    EmptyViewTemplate="{StaticResource NoServicesTemplate}">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="15"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border BackgroundColor="White"
                                        Padding="0"
                                        StrokeThickness="0"
                                        StrokeShape="RoundRectangle 16"
                                        Shadow="{StaticResource CardShadow}">
                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto" 
                                          ColumnDefinitions="*,Auto"
                                          Padding="20,15">

                                        <!-- Service Name with icon placeholder -->
                                        <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Spacing="10">
                                            <BoxView Color="#4F378A" 
                                                    WidthRequest="4" 
                                                    HeightRequest="24"
                                                    VerticalOptions="Center"
                                                    CornerRadius="2"/>
                                            <Label Text="{Binding Name}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="#2A1B4D"
                                                   VerticalOptions="Center"/>
                                        </HorizontalStackLayout>

                                        <!-- Service Description -->
                                        <Label Text="{Binding Description}"
                                               Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                               FontSize="14"
                                               TextColor="#6B7280"
                                               Margin="10,8,0,0"/>

                                        <!-- Price and Quantity in one row -->
                                        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                              Margin="0,12,0,0"
                                              ColumnDefinitions="*,Auto"
                                              VerticalOptions="Center">

                                            <Label Text="{Binding Price, StringFormat='{0} JOD'}"
                                                   Grid.Column="0"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#4F378A"
                                                   VerticalOptions="Center"/>

                                            <!-- Compact Quantity Selector -->
                                            <Frame Grid.Column="1"
                                                   Padding="0"
                                                   BackgroundColor="#F3EFFF"
                                                   CornerRadius="12"
                                                   HeightRequest="36">
                                                <Grid ColumnDefinitions="Auto,*,Auto"
                                                      WidthRequest="120">

                                                    <!-- Decrease Button -->
                                                    <Button Text="âˆ’"
                                                            Grid.Column="0"
                                                            BackgroundColor="Transparent"
                                                            TextColor="#4F378A"
                                                            CornerRadius="0"
                                                            FontAttributes="Bold"
                                                            FontSize="14"
                                                            HeightRequest="36"
                                                            WidthRequest="36"
                                                            Command="{Binding DecreasedQuantityCommand}"/>

                                                    <!-- Quantity Display -->
                                                    <Label Text="{Binding Quantity}"
                                                           Grid.Column="1"
                                                           FontSize="14"
                                                           TextColor="#4F378A"
                                                           HorizontalTextAlignment="Center"
                                                           VerticalTextAlignment="Center"/>

                                                    <!-- Increase Button -->
                                                    <Button Text="+"
                                                            Grid.Column="2"
                                                            BackgroundColor="Transparent"
                                                            TextColor="#4F378A"
                                                            CornerRadius="0"
                                                            FontAttributes="Bold"
                                                            FontSize="14"
                                                            HeightRequest="36"
                                                            WidthRequest="36"
                                                            Command="{Binding IncreaseQuantityCommand}"/>
                                                </Grid>
                                            </Frame>
                                        </Grid>

                                        <!-- Add Button with subtle animation hint -->
                                        <Button Text="Add to Booking"
                                                Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                                Margin="0,15,0,0"
                                                BackgroundColor="#4F378A"
                                                TextColor="White"
                                                CornerRadius="12"
                                                FontAttributes="Bold"
                                                FontSize="14"
                                                HeightRequest="42"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BookingViewModel}}, Path=AddSelectedServiceCommand}"
                                                CommandParameter="{Binding .}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

                <!-- Selected Services Section with header -->
                <VerticalStackLayout Spacing="15">
                    <Label Text="Your Selected Services"
                           FontSize="22"
                           FontAttributes="Bold"
                           TextColor="#2A1B4D"
                           Margin="0,0,0,5"/>

                    <CollectionView ItemsSource="{Binding BookingServices}"
                                    IsVisible="{Binding HasServices}"
                                    SelectionMode="None"
                                    EmptyView="No services selected yet">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Vertical" ItemSpacing="15"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border BackgroundColor="White"
                                        Padding="0"
                                        StrokeThickness="0"
                                        StrokeShape="RoundRectangle 16"
                                        Shadow="{StaticResource CardShadow}">
                                    <Grid RowDefinitions="Auto,Auto,Auto,Auto" 
                                          ColumnDefinitions="*,Auto"
                                          Padding="20,15">

                                        <!-- Service Name with quantity -->
                                        <HorizontalStackLayout Grid.Row="0" Grid.Column="0" Spacing="10">
                                            <BoxView Color="#4F378A" 
                                                    WidthRequest="4" 
                                                    HeightRequest="24"
                                                    VerticalOptions="Center"
                                                    CornerRadius="2"/>
                                            <Label Text="{Binding Name}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   TextColor="#2A1B4D"
                                                   VerticalOptions="Center"/>
                                        </HorizontalStackLayout>

                                        <!-- Quantity and price -->
                                        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                              Margin="10,8,0,0"
                                              ColumnDefinitions="*,Auto">
                                            <Label Text="{Binding Quantity, StringFormat='Quantity: {0}'}"
                                                   Grid.Column="0"
                                                   FontSize="14"
                                                   TextColor="#6B7280"/>

                                            <Label Text="{Binding TotalPrice, StringFormat='Total: {0} JOD'}"
                                                   Grid.Column="1"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="#4F378A"/>
                                        </Grid>

                                        <!-- Delete Button with warning color -->
                                        <Button Text="Remove"
                                                Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                Margin="0,12,0,0"
                                                BackgroundColor="White"
                                                TextColor="#4F378A"
                                                BorderColor="#4F378A"
                                                BorderWidth="1"
                                                CornerRadius="12"
                                                FontAttributes="Bold"
                                                FontSize="14"
                                                HeightRequest="42"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:BookingViewModel}}, Path=DeleteServiceCommand}"
                                                CommandParameter="{Binding .}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Sticky Bottom Button Area -->
        <Border Grid.Row="1"
                Padding="0"
                StrokeThickness="0"
                BackgroundColor="White">
            <Grid ColumnDefinitions="*,*"
                  Padding="20,15,20,20"
                  ColumnSpacing="15">

                <!-- Summary Info -->
                <Label Text="{Binding TotalServices, StringFormat='{0} services selected'}"
                       Grid.Column="0"
                       FontSize="16"
                       TextColor="#2A1B4D"
                       VerticalOptions="Center"/>

                <!-- Next Button with chevron -->
                <Button Grid.Column="1"
                        Text="Review Booking  â†’"
                        BackgroundColor="#4F378A"
                        TextColor="White"
                        CornerRadius="12"
                        FontAttributes="Bold"
                        FontSize="16"
                        HeightRequest="50"
                        Command="{Binding GoToReviewBookingCommand}"/>
            </Grid>
        </Border>
    </Grid>

    <!-- Resources -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Card Shadow -->
            <Shadow x:Key="CardShadow" Brush="#33000000" Offset="0,4" Radius="12" Opacity="0.1"/>

            <!-- No Services Template -->
            <DataTemplate x:Key="NoServicesTemplate">
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="40">
                    <Image Source="nofound.png"
                           HeightRequest="120"
                           Aspect="AspectFit"/>
                    <Label Text="No services available at the moment"
                           FontSize="18"
                           TextColor="#6B7280"
                           HorizontalOptions="Center"
                           Margin="0,20,0,0"/>
                </StackLayout>
            </DataTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>