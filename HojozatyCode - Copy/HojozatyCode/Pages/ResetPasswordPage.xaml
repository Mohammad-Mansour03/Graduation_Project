<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:HojozatyCode.ViewModels"
             x:Class="HojozatyCode.Pages.ResetPasswordPage"
             Title="New Password">

    <ContentPage.BindingContext>
        <viewmodel:ResetPasswordViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20">
        <Label Text="Enter your new password" />
        <Entry Placeholder="New Password" IsPassword="True" Text="{Binding NewPassword}" />
        <Button Text="Reset Password" Command="{Binding ResetPasswordCommand}" />
        <Label Text="{Binding Message}" TextColor="Red" />
    </VerticalStackLayout>
</ContentPage>
