<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.MainPage"
             BackgroundColor="Transparent"
             xmlns:local="clr-namespace:HojozatyCode">

    <AbsoluteLayout>

        <!-- The main app shell -->
        <local:AppShell />

        <!-- Floating Add Venue button -->
        <Button
            Text="+"
            FontSize="32"
            WidthRequest="70"
            HeightRequest="70"
            BackgroundColor="#4F378A"
            TextColor="White"
            CornerRadius="35"
            Shadow="5"
            AbsoluteLayout.LayoutBounds="0.5,1,70,70"
            AbsoluteLayout.LayoutFlags="PositionProportional"
            Clicked="OnAddVenueClicked"/>
    </AbsoluteLayout>
</ContentPage>
