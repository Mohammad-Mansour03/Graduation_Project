<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HojozatyCode.Pages.LogInPage"
             Title="LogInPage"
             BackgroundColor="#ECE6F0"
             >
    <Grid RowDefinitions="*, Auto, Auto, *, Auto, *" 
          ColumnDefinitions="20, *, 20">
       
        <!-- Close Icon -->
        <ImageButton Source="close.png" 
                     Grid.Row="0" Grid.Column="0" 
                     HorizontalOptions="Start"
                     Padding="3"
                     Margin="10"
                     VerticalOptions="Start" 
                     BackgroundColor="Transparent"
                     WidthRequest="40" 
                     HeightRequest="90" />

        <!-- Title -->
        <Label Text="Log in" 
               FontSize="36" 
               FontAttributes="Bold"
               FontFamily="Montserrat"
               Grid.Row="1" Grid.Column="1" 
               HorizontalOptions="Center" 
               VerticalOptions="Center"
               TextColor="Black" 
               Margin="20"/>

        <!-- Form -->
        <StackLayout Grid.Row="2" Grid.Column="1" Spacing="10">
            <!-- Email Entry -->
            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   Padding="0"
                   HasShadow="True"
                   HeightRequest="50"
                   BorderColor="#D9D9D9">

                <Entry Placeholder="Email" 
                       FontSize="18" 
                       TextColor="Black"
                       Margin="10,0" 
                 />
            </Frame>
            
            <!-- Password Entry with Frame -->
            <Frame BackgroundColor="White"
                   CornerRadius="15"
                   Padding="0"
                   HasShadow="True"
                   HeightRequest="50">
                
                <Entry Placeholder="Password" 
                       FontSize="18" 
                       TextColor="Black"
                       IsPassword="True"
                       Margin="10,0" 
                />
            </Frame>

            <!-- Login Button -->
            <Button Text="log in" 
                    FontSize="18" 
                    FontAttributes="Bold"
                    BackgroundColor="#4F378A" 
                    TextColor="White" 
                    CornerRadius="25"
                    HeightRequest="50"
                    HorizontalOptions="Fill" 
                    Margin="0,15"/>
        </StackLayout>

        <!-- Divider -->
        <StackLayout Grid.Row="3" Grid.Column="1" Margin ="50" Spacing="15">
            <BoxView 
                HeightRequest="1"
                WidthRequest="380"
                BackgroundColor="#CAC4D0" 
                HorizontalOptions="Fill" />
            <Label Text="Or" 
                   FontSize="16" 
                   TextColor="#49454F" 
                   HorizontalOptions="Center" />
            
        </StackLayout>

        <!-- Social Login Buttons -->
        <StackLayout Grid.Row="4" Grid.Column="1"
                     Orientation="Horizontal" 
                     Spacing="60"
                     HorizontalOptions="Center">
            <ImageButton
                Source="facebook_icon.png"
                WidthRequest="15"
                HeightRequest="15"
             />
            
            <ImageButton
                Source="google_icon.png"
                WidthRequest="15"
                HeightRequest="15"
             />
            
            <ImageButton
                Source="apple_icon.png"
                WidthRequest="15"
                HeightRequest="15"
             />

        </StackLayout>
    </Grid>

</ContentPage>